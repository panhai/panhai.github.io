/* 全屏静止中心层 */
.CenterDiv{ display:none; border:2px solid #2677e2; z-index:66666;}
.CenterDiv *{ font-family:"微软雅黑";}
/*标题栏*/
.CenterTopic{ background-color:#2677e2; line-height:40px; height:40px; padding:0px 10px;}
/*主标题*/
.CenterTopic h3{ font-size:16px; color:#fff; float:left;}
/*关闭*/
.CenterTopic q{ font-size:18px; float:right; color:#fff; cursor:pointer; margin-left:20px; font-family:"宋体"; font-weight:bold;}
/*标题上的分组框*/
.CenterTopic p{ float:right; padding-top:7px;}
/*标题上的输入框*/
.CenterTopicText{ float:left; height:25px; line-height:25px; font-size:16px; color:#666; padding:0px 10px; width:145px; border:0px;}
.CenterTopicBtn{ float:left; height:25px; width:55px; font-size:15px; color:#fff; cursor:pointer; border:0px; background-color:#ff5000; border-left:1px solid #d6d6d6; border:1px solid #ff5e00\9;}
/*下拉列表展开按钮*/
.CenterDrop{ display:block; float:right; position:relative; margin:7px 0px 0px 10px; height:25px; background-color:#ff5000; line-height:25px; width:100px; cursor:pointer;}
.CenterDrop i{ width:12px; height:12px; cursor:pointer; display:block; background-image:url(../../images/SCenter/nav-mark.gif); overflow:hidden; margin-top:8px;}
.CenterDrop span{ display:block; width:75px; float:left; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; color:#fff; font-size:14px; text-align:right;}
/*下拉列表*/
.CenterDropDown{ padding:0px 0px 20px 20px; position:absolute; background:#fff; border-bottom:1px solid #f0f0f0;}
.CenterDropDown .text{ border:1px solid #d1d1d1; height:25px; line-height:25px; margin-top:19px; float:left; padding:0px 10px;}
.CenterSelect{ display:inline-block; float:left; margin:20px 15px 0px 0px; position:relative; z-index:111;}
.CenterSelect dt{ clear:both; height:25px; line-height:25px; border:1px solid #d1d1d1;}
.CenterSelect dt b{ display:block; float:left; padding-left:10px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; color:#696969; font-weight:normal;}
.CenterSelect dt i{ display:block; float:right; width:0px; height:0px; border:5px solid #fff; font-size:0px; border-top-color:#979797; margin:10px 8px 0px 0px;}
.CenterSelect dd{ display:none; position:absolute; top:25px; left:0px; border:1px solid #d1d1d1; background:#fff; max-height:150px; _height:150px; overflow:auto;}
.CenterSelect dd a{ display:block; line-height:25px; height:25px; color:#666; font-size:12px; padding:0px 5px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;}
.CenterSelect dd a:hover{ background-color:#2673ec; color:#fff;}
.on{ z-index:222;}
.on dd{ display:block;}
.CenterDropUp{ display:block; float:right; margin:19px 25px 0px 0px; color:#ff5000; font-weight:normal; cursor:pointer;}
.CenterDropDown{ display:none;}
.CenterDropDown .submit{ float:right; margin-top:19px; width:75px; height:26px; background-color:#2677e3; cursor:pointer; color:#fff; text-align:center; border:0px; margin-right:20px;}

/*主体内容*/
.CenterContent{ clear:both; overflow:hidden; background:#fff;}
/*标签页*/
.CenterLabels{ clear:both; background-color:#F5F5F5; font-size:16px; height:35px; line-height:35px; border-bottom:1px solid #ff5000; margin-top:10px; _overflow:hidden;}
.CenterLabels li{ float:left; padding:0px 10px; margin:0px 5px; font-size:16px; cursor:pointer; color:#393939; _position:relative;}
.CenterLabels li.cur{ border:1px solid #ff5000; border-bottom-color:#fff; height:34px; line-height:34px; color:#fe0000; background-color:#fff;}
/*内容尾*/
.CenterTail{ position:absolute; bottom:0px; left:0px; width:100%; height:40px; line-height:40px; background-color:#ebebeb;}
.CenterTailBtn{ width:90px; height:30px; cursor:pointer; border:0px; font-size:18px; color:#fff; background-color:#ff5e00; float:right; margin:5px 5px 0px 0px;}
.CenterContents p{ display:block; width:50%; float:left; line-height:40px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; color:#333; font-size:14px; _height:20px; _padding:10px 0px;}
.CenterContents p input{ margin:0px 5px 0px 10px;}
/*搜索不到的空提示*/
.CenterEmpty{ display:none; padding-top:120px;}
.CenterEmpty p{ width:400px; margin:0 auto; line-height:40px; text-align:left; color:#666; font-size:16px;}
.CenterEmpty strong{ line-height:55px; font-size:26px; display:block; font-weight:normal; color:#333;}
.CenterEmpty b{ font-size:18px; color:#ff5e00; margin-left:20px; font-weight:normal; cursor:pointer;}
/*左右式表单*/
.CenterForm{ clear:both;}
.CenterForm li{ width:100%; float:left; min-height:35px; margin-bottom:15px; line-height:35px;}
.CenterForm *{ font-style:normal;}
.CenterForm var,.CenterForm dfn{ float:left; font-size:16px; color:#494949;}
.CenterForm var{ text-align:right;}
.CenterForm samp{ font-size:12px; color:#999;}
/*按钮组*/
.CenterBtns{ text-align:right;}
.CenterBtns .last{ margin-right:35px;}
.CenterBtns .btn{ margin-left:20px;}
.CenterBtns .submit{ width:155px; height:40px; border:0px; background-color:#ff5e00; color:#fff; font-size:18px; font-weight:bold; cursor:pointer;}
.CenterBtns .reset{ height:40px; background-color:#fff; color:#666; font-size:16px; cursor:pointer; border:0px;}
/*常规链接*/
.CenterLinks{ font-size:16px; color:#2677e2; font-weight:bold;}
/*警告信息*/
.CenterWarning{ clear:both; margin:0 auto; width:500px; height:100px; border-bottom:1px dashed #d4d4d4; overflow:hidden; line-height:30px;}
.CenterWarning h2{ margin:30px 20px 0px 20px; font-size:18px; color:#333;}
.CenterWarning h2 img{ vertical-align:text-bottom;}
.CenterWarning p{ font-size:14px; padding-left:70px; color:#666;}
/*分页*/
.CenterPages{ clear:both; text-align:center; padding-top:10px;}
.CenterPages *{ display:inline-block; vertical-align:middle;}
.CenterPages a{ height:22px; line-height:22px; padding:0px 10px; border:1px solid #c9c9c9; font-size:14px; color:#717171; font-family:"微软雅黑";}
.CenterPages span{ font-size:12px; font-family:"宋体"; color:#999;}
.CenterPages .text{ width:27px; height:16px; border:1px solid #c9c9c9; font-size:12px; color:#717171;}
.CenterPages .submit{ width:33px; height:18px; background-color:#2673ec; font-size:12px; color:#fff; cursor:pointer; border:0px;}