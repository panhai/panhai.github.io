<script>
$(function(){

    var bol,txt,btnTxt,animateLefte;

    function toggleState(){
        $(this).toggleClass('on').find('i').animate({"left": animateLeft}, 200)
        .end()
        .find('span').text(txt);
        $(".Privacy .btn").val(btnTxt);
    }

    $(".switch").click(function(event) {

           var _self = this;

            bol = $(this).hasClass('on');
            txt = bol ? "已关闭" : "已开启",
            btnTxt = bol ? "立即开通" : "我要关闭";
            animateLeft = bol ? 0 : "20px";
        if(!bol){
             CONFIRM('小猎头服务','<h5>是否确认开通？</h5><p class="hunterTxt">重要提示：如<span>暂时不找工作，请勿开通</span>，以免好工作小猎头电话联系或企业邀约，造成生活干扰！</p>','确定开通',function(){

                toggleState.call(_self);
                ALERT('小猎头服务','<div class="tipCode"><h6>微信扫一扫，关注好工作</h6><img src="../images/v2/weixinqr.jpg" alt=""><p class="h3">微信扫一扫，关注好工作</p><p>投递反馈，随时获知！面试通知，一个不漏！</p></div>',NaN,"CenterMiddle");
            });
        }else{
             CONFIRM('小猎头服务','<h5>是否确认关闭？</h5><p>如仍未找到工作， 建议你不用关闭，关闭将错过更多高薪职位哦！</p>','确认关闭',function(){
                toggleState.call(_self);
            });
        }
    });

    $(".Privacy .Check").click(function(event){
        event.preventDefault();
        var bol = !$(this).hasClass('checked');
        $(this).toggleClass('checked').find('input').prop("checked", bol);
        if(bol){
            $(".Privacy .btn").removeAttr('disabled')
        }else{
            $(".Privacy .btn").attr('disabled', 'disabled');
        }

    });

    $(".Privacy .btn").click(function(event) {
        $(".switch").click();
    });
});
</script>