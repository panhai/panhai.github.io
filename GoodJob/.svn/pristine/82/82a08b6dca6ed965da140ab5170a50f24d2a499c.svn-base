/* 全屏静止中心层 */
.CenterDiv{ display:none; border:1px solid #2677e2; z-index:66666;}
.CenterDiv *{ font-family:"微软雅黑";}
/*标题栏*/
.CenterTopic{ background-color:#2677e2; line-height:45px; height:45px; padding:0px 10px;}
/*主标题*/
.CenterTopic h3{ font-size:18px; color:#fff; float:left;}
/*关闭*/
.CenterTopic q{ font-size:24px; float:right; color:#fff; cursor:pointer; margin-left:20px; font-family:"宋体";}
/*标题上的分组框*/
.CenterTopic p{ float:right; margin-left:20px; padding-top:7px; margin-left:10px\9;}
/*标题上的输入框*/
.CenterTopicText{ float:left; height:30px; line-height:30px; font-size:16px; color:#666; padding:0px 10px; width:135px; border:0px;}
.CenterTopicBtn{ float:left; height:30px; width:55px; font-size:16px; color:#666; cursor:pointer; border:0px; background-color:#f2f2f2; border-left:1px solid #d6d6d6; border:1px solid #d6d6d6\9;}
/*下拉列表*/
.CenterDiv .on dd{ display:block;}
.CenterSelect{ position:relative;}
.CenterSelect dt{ clear:both; height:30px; background-color:#fff; line-height:30px;}
.CenterSelect dt i{ width:12px; height:12px; cursor:pointer; display:block; background-image:url(../../images/icons.gif); overflow:hidden;}
.CenterSelect span,.CenterSelect b{ display:block; float:left; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;}
.CenterSelect span{ color:#999; font-size:14px;}
.CenterSelect b{ color:#333; font-size:14px; font-weight:normal;}
.CenterSelect dd{ display:none; position:absolute; background-color:#fff; border-top:0px; z-index:2;}
.CenterSelect dd a{ display:block; clear:both; border-top:1px solid #ebebeb; padding:0px 10px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; color:#666;}
.CenterSelect dd a:hover{ background-color:#2677e2; color:#fff;}
/*标题上的下拉列表*/
.CenterTopic .on dt{ height:35px; line-height:35px;}
.CenterTopic .CenterSelect{ float:right; margin-top:7px;}
.CenterTopic .CenterSelect dt{ width:130px; padding:0px 10px;}
.CenterTopic .CenterSelect span,.CenterTopic .CenterSelect b{ width:100px;}
.CenterTopic .CenterSelect dd{ top:35px; left:-1px; width:150px; line-height:35px; max-height:216px; overflow:auto; _height:180px; border:1px solid #2677e2;}
.CenterTopic .CenterSelect i{ background-position:center; margin-top:9px; float:right;}
/*内容上的下拉列表*/
.CenterContent .CenterSelect{ top:2px;}
.CenterContent .CenterSelect dt{ width:260px; border:1px solid #b8b8b8; padding-left:10px;}
.CenterContent .CenterSelect span,.CenterContent .CenterSelect b{ width:200px;}
.CenterContent .CenterSelect s{ float:right; display:block; width:40px; height:30px; background-color:#f6f6f6; border-left:1px solid #b8b8b8; cursor:pointer;}
.CenterContent .CenterSelect i{ background-position:-24px 24px; margin:8px auto;}
.CenterContent .CenterSelect dd{ top:30px; left:0px; width:270px; line-height:30px; font-size:14px; border:1px solid #b8b8b8; border-top:0px;}
.CenterContent .CenterSelect dd a{ _height:30px;}
/*主体内容*/
.CenterContent{ clear:both; overflow:hidden; background:#fff;}
/*标签页*/
.CenterLabels{ clear:both; background-color:#F5F5F5; font-size:16px; height:35px; line-height:35px; border-bottom:1px solid #ff5000; margin-top:10px; _overflow:hidden;}
.CenterLabels li{ float:left; padding:0px 10px; margin:0px 5px; font-size:16px; cursor:pointer; color:#393939; _position:relative;}
.CenterLabels li.cur{ border:1px solid #ff5000; border-bottom-color:#fff; height:34px; line-height:34px; color:#fe0000; background-color:#fff;}
/*内容尾*/
.CenterTail{ position:absolute; bottom:0px; left:0px; width:100%; height:40px; line-height:40px; background-color:#ebebeb;}
.CenterTailBtn{ width:90px; height:30px; cursor:pointer; border:0px; font-size:18px; color:#fff; background-color:#ff5e00; float:right; margin:5px 5px 0px 0px;}
.CenterContents p{ display:block; width:25%; float:left; line-height:40px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; color:#333; font-size:14px; _height:20px; _padding:10px 0px; border-bottom:1px solid #e2e2e2;}
.CenterContents p input{ margin:0px 5px 0px 10px;}
/*搜索不到的空提示*/
.CenterEmpty{ display:none; padding-top:120px;}
.CenterEmpty p{ width:400px; margin:0 auto; line-height:40px; text-align:left; color:#666; font-size:16px;}
.CenterEmpty strong{ line-height:55px; font-size:26px; display:block; font-weight:normal; color:#333;}
.CenterEmpty b{ font-size:18px; color:#ff5e00; margin-left:20px; font-weight:normal; cursor:pointer;}
/*左右式表单*/
.CenterForm{ clear:both;}
.CenterForm li{ width:100%; float:left; min-height:35px; margin-bottom:15px; line-height:35px;}
.CenterForm *{ font-style:normal;}
.CenterForm var,.CenterForm dfn{ float:left; font-size:16px; color:#494949;}
.CenterForm var{ text-align:right;}
.CenterForm samp{ font-size:12px; color:#999;}
/*按钮组*/
.CenterBtns{ text-align:right;}
.CenterBtns .last{ margin-right:35px;}
.CenterBtns .btn{ margin-left:20px;}
.CenterBtns .submit{ width:155px; height:40px; border:0px; background-color:#ff5e00; color:#fff; font-size:18px; font-weight:bold; cursor:pointer;}
.CenterBtns .reset{ height:40px; background-color:#fff; color:#666; font-size:16px; cursor:pointer; border:0px;}
/*常规链接*/
.CenterLinks{ font-size:16px; color:#2677e2; font-weight:bold;}
/*警告信息*/
.CenterWarning{ clear:both; margin:0 auto; width:500px; height:100px; border-bottom:1px dashed #d4d4d4; overflow:hidden; line-height:30px;}
.CenterWarning h2{ margin:30px 20px 0px 20px; font-size:18px; color:#333;}
.CenterWarning h2 img{ vertical-align:text-bottom;}
.CenterWarning p{ font-size:14px; padding-left:70px; color:#666;}
