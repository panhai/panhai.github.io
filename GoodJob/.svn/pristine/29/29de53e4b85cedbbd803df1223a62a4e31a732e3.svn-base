<script src="../js/plugin/BaiduMap.js"></script>
<script>
$(function(){
	//地图行为 已在页面实现
	var Map=BaiduMap("MapContainer",{editable:true});
	//更换城市时，自动锁定新中心 已在页面实现
	$(".Cities input[type=hidden]").change(function(){
		var city=GetArea(this.value),
			name=city[0];
		Map.search(name);
	});
	//点击定位，至少要有城市 已在页面实现
	$(".Locate").click(function(){
		var detail=$(".AddressDetail").val(),
			city=$(".Cities input[type=hidden]").val(),
			names=[];
		if(!city)
		{
			alert("请选择城市！");
			return false;
		}
		if(!detail)
		{
			alert("请输入详细地址！");
			return false;
		}
		names.push(GetArea(city)[0]);
		names.push(detail);
		Map.search(names.join(''));
	});
	
	//模糊查询公司名称
	$(".COMPANY").on("input",function(){
		var key=this.value,
			dl=$(this).closest("dl"),
			dd=dl.find("dd"),
			hid=dl.find("input[type='hidden']").val('');
		if(!key)return;
		var rs/*=[
			{
				id:1,
				name:'冠鹏'
			},
			{
				id:2,
				name:'百度'
			},
			{
				id:3,
				name:'腾讯'
			},
			{
				id:4,
				name:'优酷'
			}
		];*/
		/*rs为数组格式为
		[
			{
				id:公司的ID,
				name:公司名称
			}
		]
		*/
		
		//ajax的success调用
		function success(){
			dd.empty().html($.map(rs,function(ele){
				return '<a data-id="'+ ele.id +'">'+ ele.name +'</a>'
			}).join(''));
		}
		//success()
	});
	
	//职位类型变化时，需要切换薪资/性别/长期招聘
	$(".JobType").change(function(){
		var bool=this.value==2;
		$(".Salary")[bool?"hide":"show"]();
		$(".SalaryParttime,.OtherParttime")[bool?"show":"hide"]();
	}).change();
	
	//自定义福利
	$(".ExtraWelfares").click(function(event){
		if(event.target.tagName=='Q')
		$(event.target).closest("label").remove();
	});
	$(".AddWelfare").click(function(){
		var newone=$(".ExtraWelfare").val();
		if(!newone){alert("请填写新福利内容！");return false;}
		if($(".ExtraWelfares span:contains("+ newone +")").length){alert("此福利已添加过");return false;}
		$(".ExtraWelfares").append('<label><input type="checkbox" checked value="'+ newone +'"><span>'+ newone +'</span><q></q></label>');
		$(".ExtraWelfare").val('');
	});
})
</script>
