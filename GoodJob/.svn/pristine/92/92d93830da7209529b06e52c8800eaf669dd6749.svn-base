/* HR收藏夹 */

/*主要布局*/
.Main{}
.Left{ width:220px; float:left; margin-top:40px;}
.Right{ width:790px; float:right; background-color:#fff; margin:40px 0;}

/*左导航*/
.Publish{ display:block; clear:both; background:#77b0fb url(../../../images/v2/icons/publish.jpg) 55px center no-repeat; padding-left:35px; text-align:center; color:#fff; font-size:18px; line-height:40px; height:40px; margin-bottom:5px;}
.Publish:hover{ background-color:#1562c8;}

.LeftNav{ clear:both; background-color:#fff; padding-bottom:50px;}
.LeftNav h3,.LeftNav a{ background:url(../../../images/v2/icons/navline.jpg) bottom center no-repeat;}
.LeftNav h3{ line-height:44px; font-size:20px; padding:0 30px; font-weight:normal;}
.LeftNav p{ clear:both;}
.LeftNav a{ display:block; line-height:36px; height:36px; color:#3f3f3f; font-size:16px; padding:0 25px 0 50px;}
.LeftNav a:hover,.LeftNav a.cur{ background-color:#e8f2ff; color:#1562c8;}
.LeftNav a span{ float:left;}
.LeftNav a i{ float:right; width:20px; height:20px; line-height:20px; font-size:14px; color:#fff; background-color:#77b0fb; margin-top:8px; font-style:normal; text-align:center;}
/*有的是带删除功能的*/
.Settable del{ float:right; width:16px; height:16px; background-image:url(../../../images/v2/icons/trush.png); _background-image:url(../../../images/v2/icons/trush.gif); margin:10px 2px 0 0; display:none; overflow:hidden; _margin-righ:0px;}
.Settable a:hover del{ display:block;}
.Settable a:hover i{ display:none;}
/*快捷添加*/
.LeftNav .SELECT{ clear:both;}
.LeftNav .SELECT dt{ line-height:40px; padding:0 25px 0 50px;}
.LeftNav .SELECT-on dt{ background-color:#e8f2ff; color:#1562c8;}
.LeftNav .SELECT dt *{ font-size:16px; color:#3f3f3f;}
.LeftNav .SELECT dd{ background-color:#e8f2ff; padding:0 10px 10px; width:200px; _left:-50px;}
.LeftNav .SELECT input{ border:0; height:30px; float:left;}
.LeftNav .SELECT .text{ width:130px; padding:0 10px; line-height:30px; font-size:14px; color:#525252;}
.LeftNav .SELECT .submit{ width:50px; font-size:16px; cursor:pointer; color:#fff; background-color:#1562c8;}


/*顶版块说明*/
.Intro{ clear:both; background-color:#ebf3ff; overflow:hidden; _padding-bottom:1px;}
.Intro dt{ background:url(../../../images/v2/fold.jpg) right top no-repeat transparent; border-bottom:1px solid #cfe5ff; line-height:50px; height:50px;}
.Intro dt.margin{ margin-bottom:10px;}
.Intro dt h1{ font-size:20px; color:#1562c8; padding-left:15px; float:left; font-weight:normal;}
.Intro dt small{ font-size:14px;}
.Intro dt a{ display:block; float:right; color:#1562c8; padding-left:20px; background-position:left center; background-repeat:no-repeat;}
.Intro .refresh{ padding:0 40px 0 20px; background-image:url(../../../images/v2/icons/refresh.png);}
.Intro .refresh{ _background-image:url(../../../images/v2/icons/refresh.gif);}
.Intro .edit,.Intro .delete{ height:20px; padding:20px;}
.Intro .edit{ background-image:url(../../../images/v2/icons/edit-deep.png); _background-image:url(../../../images/v2/icons/edit-deep.gif);}
.Intro .delete{ margin-right:20px; background-image:url(../../../images/v2/icons/trash-deep.png); _background-image:url(../../../images/v2/icons/trash-deep.gif);}
.Intro dd{ margin:20px 50px; background:url(../../../images/v2/tip.png) #fff 24px center no-repeat; border:1px dashed #cfe5ff; padding:10px 20px 10px 110px; font-size:14px; color:#606060; line-height:25px;}
.Intro dd{ _background-image:url(../../../images/v2/tip.gif);}
.Intro dd a{ color:#1562c8; text-decoration:underline;}
.Intro dd a:hover{ color:#252525; text-decoration:none;}


/*标题标签*/
.Topics{ clear:both; height:42px; background-color:#cde4ff; line-height:40px; padding:0 10px;}
.Topics h2{ font-size:18px; font-weight:normal; float:left; margin-right:10px;}
.Topics a{ color:#1562c8; border-top:2px solid #cde4ff; display:block; padding:0 20px; white-space:nowrap;}
.Topics a:hover,.Topics a.cur{ background-color:#fff; border-top-color:#1562c8;}
.Topics a.new{ background-image:url(../../../images/v2/icons/new.png); background-repeat:no-repeat; background-position:100% -6%;}
.Topics a.new{ _background-image:url(../../../images/v2/icons/new.gif);}
.Topics .text-container{ float:right; width:220px;}
.Topics .text-container .PLACEHOLDER{ margin-top:6px !important;}
.Topics input{ float:right; border:0; height:30px; background-color:#fff; margin-top:6px;}
.Topics .submit{ width:30px; cursor:pointer; background:url(../../../images/v2/icons/magnifier-l.png) #fff center no-repeat;}
.Topics .submit{ _background-image:url(../../../images/v2/icons/magnifier-l.gif);}
.Topics .text{ padding:0 10px; font-size:16px; color:#1562c8; width:200px; line-height:30px;}
/*日期选择*/
.Topics .calendar{ display:block; float:right; width:26px !important; height:26px !important; cursor:pointer; margin:8px; background-image:url(../../../images/v2/icons/calendar.png); _background-image:url(../../../images/v2/icons/calendar.gif); position:relative; _overflow:visible;}
#calendar{ visibility:hidden; width:5px;}
/*职位管理上-如何提高好工作指数*/
.Topics dfn{ font-size:16px; color:#1562c8; float:right; padding-right:10px; font-style:normal; cursor:pointer;}

/*查询关键字与时间*/
.Query{ clear:both; padding:20px; font-size:14px; color:#a4a4a4; background-color:#fff;}
.Query a{ color:#1562c8;}

/*没有信息*/
.Nothing{ text-align:center; color:#87b7f5; font-size:24px; padding:80px; background-color:#fff;}
/*信息列表*/
.Infors{ width:750px; margin:20px auto;}
.Infors caption{ padding:0 0 15px 0; height:40px; line-height:40px;}
/*模拟复选框*/
.Boxes{ float:left; font-size:16px;}
.Boxes a{ display:block; float:left; padding:0 20px; font-style:normal; background:url(../../../images/v2/icons/box-empty.jpg) left center no-repeat; cursor:pointer; color:#525252;}
.Boxes a:hover{ color:#1562c8; text-decoration:underline;}
.Boxes a.cur{ background-image:url(../../../images/v2/icons/box-checked.jpg);}
/*信息*/
.Infors th{ background-color:#f7f7f7; line-height:36px; font-size:14px; font-weight:normal; color:#868686;}
.Infors th b{ font-weight:normal; color:#414141;}
.Infors td{ padding:15px 0;}
.bb td{ border-bottom:1px solid #dbdbdb;}
.Infors var{ display:block; width:86px; height:86px; overflow:hidden; border:1px solid #f7f7f7;}
/*资料*/
.profile{ line-height:25px;}
.profile h4{ font-size:24px; color:#1562c8; margin:4px 0; font-weight:normal;}
.profile h4 q{ display:inline-block; width:26px; height:26px; vertical-align:text-bottom; background:url(../../../images/v2/icons/eye.png) right center no-repeat;}
.profile h4 q{ _background-image:url(../../../images/v2/icons/eye.gif);}
.profile small{ font-size:14px; color:#3d3d3d; padding-left:10px;}
.profile p{ font-size:14px; color:#6b6b6b; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; width:98%;}
.profile p samp{ display:inline-block; width:125px; height:15px; position:relative; top:4px;}
/*新增图标效果*/
.profile ins{ display:inline-block; width:26px; height:26px; background-image:url(../../../images/v2/icons/school.png); vertical-align:middle; text-decoration:none;}
.profile ins{ _background-image:url(../../../images/v2/icons/school.gif);}
.profile ins cite{ display:none; position:absolute; font-size:14px; color:#999; font-style:normal; width:220px; padding:5px 10px; line-height:25px; background-color:#fff; border:1px solid #a465f3; top:35px; left:-27px; word-break:break-all;}
.profile ins.on{ position:relative; z-index:2;}
.profile ins.on cite{ display:block;}
.profile ins strong{ display:block; clear:both; font-weight:normal; color:#525252; font-size:16px; overflow:hidden; text-overflow:ellipsis; width:100%;}
.profile del{ width:18px; height:10px; background-image:url(../../../images/v2/icons/school-angle.png); position:absolute; top:-10px; left:30px; z-index:3; overflow:hidden;}
.profile del{ _background-image:url(../../../images/v2/icons/school-angle.gif);}
/*操作*/
table td.options{ text-align:right; line-height:30px;}
.options a{ display:inline-block; color:#2677e2; clear:both;}
.options a:hover{ color:#f16702; text-decoration:underline;}
/*不一样的操作*/
.options p{ clear:both; font-size:14px; color:#a4a4a4;}
.options p b{ color:#525252; font-weight:normal;}
.options div{ clear:both;}
.options div .SELECT{ float:right; height:20px; margin:5px 0; border-left:1px solid #c6c6c6;}
.options div .SELECT dt{ line-height:20px; z-index:2; position:relative;}
.options div .SELECT dt i{ margin-top:3px\9; cursor:pointer;}
.options div .SELECT dd{ border:2px solid #b5d3ff; width:160px; padding:5px; left:auto; right:0; top:-10px; z-index:1;}
.options div .SELECT dd a{ float:none; display:inline-block;}
.options div .SELECT dd a.checked{ background:none; color:#525252 !important;}
.options div .SELECT dd a:hover,.options div .SELECT dd a.checked:hover{ background:none; color:#1562c8 !important;}
.options div p{ text-align:left; height:30px; padding:0 5px; font-size:16px;}
.options div a.outer{ display:block; clear:none; float:right; margin-right:10px;}

.MixTools{ padding:0 20px 20px; width:750px; float:left;}
.PAGES{ float:right; clear:none;}
.TailTools{ float:left; line-height:30px;}
.TailTools a{ display:inline-block; color:#fff; background-color:#b7d5fb; padding:0px 20px; margin-left:10px;}
.TailTools a:hover{ background-color:#5fa4fd;}

/* 新改的HR收藏夹（简历云）比较麻烦，所以单列出来 */
.HRstore{ clear:both; background-color:#fff; margin-bottom:10px;}
.HRstore div{ padding:20px;}
.HRstore h3{ font-size:18px; color:#3d3d3d; font-weight:normal;}
.HRstore samp{ display:block; clear:both; margin:5px 0;}
.HRstore p{ font-size:14px; color:#a4a4a4;}
.HRstore b,.HRstore i{ color:#525252; font-weight:normal; font-style:normal;}
.HRstore code{ display:block; clear:both; text-align:center; font-size:16px; color:#1562c8; background-color:#ebf3ff; line-height:40px; margin-bottom:10px;}
.HRstore em{ font-style:normal; background-color:#4594fc; padding:0 3px; margin-left:5px; color:#fff;}

.HRmenus{ clear:both; background-color:#fff;}
.HRmenus h3,.HRmenus li,.HRmenus h4{ background:url(../../../images/v2/icons/navline.jpg) bottom center no-repeat;}
.HRmenus h3{ font-size:18px; color:#3d3d3d; font-weight:normal; padding:20px 20px 10px;}
.HRmenus ul{ max-height:288px; overflow:hidden; _height:288px;}
.HRmenus li a{ display:block; line-height:36px; height:36px; color:#3f3f3f; font-size:16px; padding-left:35px; white-space:nowrap; background:url(../../../images/v2/icons/li-dot.png) 20px center no-repeat;}
.HRmenus li a{ _background-image:url(../../../images/v2/icons/li-dot.gif);}
.HRmenus a:hover{ color:#1562c8;}
.HRmenus a.cur{ background-image:url(../../../images/v2/icons/li-dot-cur.png); color:#1562c8;}
.HRmenus a.cur{ _background-image:url(../../../images/v2/icons/li-dot-cur.gif);}
/*点击展开*/
.HRmenus h4{ display:none; line-height:36px; font-weight:normal; padding-left:15px;}
.HRmenus h4 a{ display:block; color:#9e9d9d; background:url(../../../images/v2/icons/triangle-down.png) left center no-repeat; padding-left:20px;}
.HRmenus h4 a{ _background-image:url(../../../images/v2/icons/triangle-down.gif);}
.HRmenus h4 a.on{ background-image:url(../../../images/v2/icons/triangle-up.png); _background-image:url(../../../images/v2/icons/triangle-up.gif);}
/*操作项*/
.HRmenus h5{ padding:20px;}
.HRmenus h5 a{ display:inline-block; background-color:#ddecff; color:#1562c8; font-size:12px; font-weight:normal; line-height:30px; padding:0 10px;}

/*过滤项*/
.Topics span{ float:right; font-size:16px; color:#1562c8; padding:0 15px; background:url(../../../images/v2/icons/triangle-down-blue-deep.png) right center no-repeat; cursor:pointer;}
.Topics span{ _background-image:url(../../../images/v2/icons/triangle-down-blue-deep.gif);}
.Filters{ background-color:#ebf3ff; padding:10px 0 0 20px; clear:both; display:none;}
.Filters th{ text-align:right; font-size:14px; color:#525252; font-weight:normal; line-height:50px;}
.Filters var{ display:block; width:70px; float:left; text-align:right; font-size:14px; color:#525252; font-style:normal; line-height:35px;}
.Filters thead{ height:0;}
.Filters td{ padding:7px 0;}
.Filters div.half{ width:50%; float:left;}
.Filters .SELECT{ float:left;}
.Filters .SELECT dt{ background-color:#fff; border:1px solid #f4f4f4; line-height:33px;}
.Filters ins{ display:block; text-decoration:none; float:left; line-height:35px; padding:0 5px;}
/*长条*/
.blue dt{ width:280px;}
.blue.SELECT-on dt{ z-index:2; position:relative;}
.blue dt span,.blue dt b{ width:262px;}
.blue dd{ top:33px; border:2px solid #ebf3ff;}
.filter-jobs{ _position:relative;}
.filter-jobs dd{ left:-360px;}
.filter-profs dd{ left:-745px;}
/*单条*/
.alone{}
.alone dt{ width:148px;}
.alone dt input,.alone dt b,.alone dt span{ width:128px !important; font-size:14px !important;}
.alone dd{ width:168px; border:1px solid #f4f4f4;}
/*双条*/
.couple{}
.couple dt{ width:73px;}
.couple dt b,.couple dt span{ width:56px;}
.couple dd{ width:93px; font-size:14px; border:1px solid #f4f4f4;}
/*学历*/
.Education{ width:207px;}
.Education dt b,.Education dt span{ width:167px; font-size:14px;}
.Education dd{ width:205px; border:1px solid #f4f4f4;}
/*按钮项*/
.Filters tfoot td{ text-align:center; padding:20px;}
.Filters tfoot td *{ vertical-align:middle; display:inline-block;}
.Filters .submit{ width:180px; height:30px; color:#fff; cursor:pointer; background-color:#1562c8; font-size:18px; cursor:pointer; border:0;}
.Filters .reset,.Filters .fold{ color:#525252; font-size:16px; text-decoration:underline; padding-left:20px; background-color:transparent;}
.Filters .reset{ border:0; cursor:pointer;}

/*创建新分组/修改当前分组*/
.Create,.Edit{}
.Create .text,.Create textarea,.Edit .text,.Edit textarea{ width:298px;}
.Create textarea,.Edit textarea{ height:150px;}
.CENTERDIV img{ vertical-align:middle; margin-right:5px;}

/*移动简历*/
.Move{}
.Move table{ width:450px; margin:0 auto;}
.Move textarea{ height:150px; width:428px;}
.Move strong{ color:#1562c8; font-weight:normal;}
.Move .groups{}
.Move .groups label{ display:inline-block; width:130px; float:left; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; font-size:16px; padding-left:20px; background:url(../../../images/v2/icons/box-empty.jpg) left center no-repeat; cursor:pointer;}
.Move .groups input{ display:none;}
.Move .groups label.checked{ color:#1562c8; background-image:url(../../../images/v2/icons/box-checked.jpg);}
.Move .create{ border:1px solid #b9b9b9; background-color:#fff; font-size:16px; color:#525252; width:120px; height:30px; cursor:pointer;}
/*移动下的创建新分类*/
.create-subform{ display:none;}
.create-subform input{ vertical-align:top; margin:5px 10px 0 0; float:left; _margin-right:5px;}
.create-subform .text{ width:278px; height:34px; line-height:34px;}
.create-subform .btn{ width:65px; height:36px; font-size:16px; border:0; cursor:pointer;}
.create-subform .sub-submit{ background-color:#1562c8; color:#fff;}
.create-subform .sub-reset{ background-color:#e5e5e5; color:#525252; margin-right:0;}
/*新增小小小字提示*/
.Move .summary{ display:none;}
.Move .summary small{ font-size:12px;}
/*新增样式控制*/
.Move .memory{ display:;}
.multiple .memory{ display:none !important;}
.multiple .summary{ display:block !important;}

/*备注提示*/
td.profile.on{ position:relative;}
.profile .memory{ display:none; width:379px; height:42px; overflow:hidden; padding:20px; position:absolute; left:0; top:50px; background-image:url(../../../images/v2/memorybg.png); z-index:3; color:#1562c8; font-size:14px; line-height:25px;}
.profile .memory{ _background-image:url(../../../images/v2/memorybg.gif);}
td.profile.on .memory{ display:block;}

/*为了整理z轴而更改的样式，要保证标题标签栏上的时间选择器在最上，要保证过滤选项中的下拉列表在信息列表任意内容之上（SVG会自动设置成relative）*/
.Topics{ position:relative; z-index:1111;}
.Filters{ position:relative; z-index:111;}
