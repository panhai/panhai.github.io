        //动画显示计算
        var cont = $(".contentBG .animate");
        function according() {
            cont.map(function (i) {
                if($(this).offset().top < $(window).scrollTop()+ $(window).height()*.75){
                    var anima = $(this).find(".midBox");
                    anima.removeClass("animateA animateB");

                }else{
                    if(i%2==0){
                        $(this).find(".midBox").addClass("animateA");
                    }
                    if(i%2==1){
                        $(this).find(".midBox").addClass("animateB");
                    }
                }
            });

        }



        //页面首次加载调用一次，预防页面刷新停留在该文本没内容显示
        according();

        //好工作&才+发展历程  animation 总体调用
        function animetion() {
            $(window).on("scroll",function (e) {
                e.preventDefault();
                according();
            })
        }
        animetion();






