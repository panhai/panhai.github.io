*{
    margin:0;
    padding: 0;
}
body{
    font-family: "微软雅黑";
}
h1,h2,h3,h4,h5,h6{ font-weight:normal;}
.w{
    width: 1000px;
    margin: 0 auto;
}
.rl{
    float: left;
    height: 40px;
    width: 1px;
    margin: 20px 22px 0;
    background-color: #e9e9e9;
}
.mr10{
    margin-top: 10px!important;
}
.ml118{
    margin-left: 118px;
}
.top-logo{
    height: 72px;
}
.top-logo a{
    display: block;
    float: left;
    margin-top: 5px;
}
.banner{
    width: 100%;
    height: 372px;
    background: url("../images/banner.png") no-repeat center top;
}
.m1{
    background: url("../images/m-bg.png") no-repeat center top;
}
.m1 h2,
.m2 h2,
.m3>h2{
    padding-top: 46px;
    margin-bottom: 18px;
    font-size: 48px;
    color: #1060c6;
    text-align: center;
}
.m1 p{
    width: 788px;
    margin: 0 auto;
    font-size: 16px;
    color: #393838;
    line-height: 28px;
}
.m1 .in{
    width: 676px;
    padding-top: 160px;
    margin: 50px auto 44px;
    background: url("../images/m1-bg.png") no-repeat center top;
}
.m1 .in span{
    display: inline-block;
    width: 146px;
    float: left;
    text-align: center;
}
.m2{
    width: 100%;
    padding-bottom: 65px;
    background: #eef5fb;
    text-align: center;
    overflow: hidden;
}
.m2 h3{
    padding-top: 25px;
    margin-bottom: 26px;
    font-size: 32px;
    color: #1c1c1c;
}
.m2 p,
.m3 p{
    line-height: 28px;
    font-size: 16px;
    color: #4d4d4d;
}
.m2 h4{
    margin: 40px 0 22px;
    color: #282828;
    font-size: 24px;
    font-weight: bold;
}
.m2 h4 em{
    color: #ff5a00;
    font-style: normal;
}
.m2 img{
    cursor: pointer;
}
.m3>h2{
    padding-bottom: 6px;
    font-size: 32px;
    color: #141313;
}
.m3>p{
    text-align: center;
}
.m3{
    background: url("../images/m2-bg.png")  no-repeat center top;
    overflow: hidden;
}
.m3 .in {
    overflow: hidden;
    margin: 64px 0  70px;
}
.m3 .in .item{
    float: left;
    width: 176px;
    margin-right: 30px;
    text-align: center;
}
.mr0{
    margin:0!important;
}
.m3 .in .item h3{
    color: #0057b1;
    font-size: 20px;
    margin-bottom: 10px;
}
.m3 .in .item h2{
   color: #007aec;
   font-size: 24px;
   font-weight: 500;
   margin-bottom: 0px;
}
.m3 .in .item h4{
   font-size: 18px;
   color: #2686e0;
   margin: 4px 0;
}
.m3 .in .item p{
    font-size: 14px;
    color: #969696;
    text-align: left;
    display: block;
}
.m4{
    width: 100%;
    height: 374px;
    background: url("../images/m4.png") no-repeat center top;
    color: #ffffff;
}
.m4 .in{
    padding: 50px 0 0;
    text-align: center;
}
.m4 h2{
    margin-bottom: 40px;
    font-size: 48px;
}
.m4 p{
    font-size: 18px;
    line-height: 33px;
}
.m4 a{
    width: 323px;
    height: 50px;
    display: block;
    margin: 30px auto 0;
    background: #ffa800;
    color: #fff;
    text-decoration: none;
    line-height: 50px;
    font-size: 22px;
}
.m5{
    background-color: #eef5fb;
    text-align: center;
}
.m5 .in{
    padding-bottom: 44px;
    padding-top: 50px;
}
.m5 h2{
    margin-bottom: 30px;
    color:#005ac9;
    font-size: 46px;
}
.m5 p {
    margin-bottom: 26px;
    font-size: 32px;
}
.m5 h2 i,.m5 p i{
    color: #ff5a00;
    font-style: normal;
}
.m5 ul,.m2 ul{
    overflow:hidden;
    list-style: none;
}
.m5 ul li,.m2 ul li{
    float:left;
    margin: 0 10px 10px 0;
}
.m5 ul li:nth-child(6n),.m2 ul li:nth-child(5n){
    margin-right:0;
}
.m5 ul li img,.m2 ul li img{
    display: block;
}
.footer{
    height: 140px;
    background-color: #f7f7f7;
    border-top: 1px solid #c8d9ec;
}
.footer .l{
    float: left;
    margin-top: 28px;
}
.footer .l span{
    font-size: 21px;
    color: #4c4c4c;
}
.footer .r{
    float: right;
    margin-top: 55px;
    text-align: right;
    font-size: 13px;
}
.footer .r p{
    line-height: 26px;
}
.footer .r span{
    color: #2a62c8;
}