/* 个人设置 */
.left{ width:206px; float:left; background-color:#fff; border-top:3px solid #E6E6E6;}
.left ul{ padding:13px;}
.left li{ clear:both; border-bottom:1px dashed #ccc; padding:10px 0px;}
.left li *{ vertical-align:middle; line-height:30px; font-size:16px; font-family:"微软雅黑";}
.left strong{ display:block; clear:both; color:#555; padding:0px 10px; margin-bottom:5px;}
.left li img{ margin-right:5px;}
.left li a{ display:block; clear:both; padding-left:35px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; color:#666; margin-bottom:5px;}
.left li a:hover,.left .cur{ color:#fff; background-color:#2677E2;}

.right{ width:777px; float:right; background-color:#fff;}
.right h1{ color:#333; font-size:18px; font-family:"微软雅黑"; font-weight:normal; line-height:45px; height:45px; padding:0px 25px;}

