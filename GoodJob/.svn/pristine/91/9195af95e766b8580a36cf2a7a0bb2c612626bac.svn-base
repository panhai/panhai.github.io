<script type="text/javascript">
    function starUploadImage(url,successFun,errorFun,debug){
        JB.ajax.postData("/UploadFile/GetRemoteFile.ashx",
        function(xmlObj){
            if (xmlObj) {
                try {
                    if(debug)alert(xmlObj.responseText);
                    var ajson = eval("(" + xmlObj.responseText + ")");
                    if (ajson.error > 0){ if(JB.isFunction(errorFun))errorFun(url,ajson); }
                    else if(JB.isFunction(successFun))successFun(url,ajson);
                } catch (e) {
                    if(debug)alert(e);
                    if(JB.isFunction(errorFun))errorFun(url,{error:1,message:e.description});
                }
            } else {
                if(JB.isFunction(errorFun))errorFun(url,{error:1,message:"上传失败"});
            }
        },
        {
            fileUrl: url,
            tp: "org",
            rid1: "0",
            rid2: "0",
            rky1: "",
            rky2: "",
            bussCode: "2022",
            remark: "远程图片",
            orgId: "10000",
            folderId: "0",
            saveName: "",
            imgW: "0",
            imgH: "0",
            strictWH: 0,
            exts: "jpg,jpeg,gif,bmp,png",   //自定义限制上传文件类型
            maxLenKB: 300,   //自定义限制上传文件大小
            bmpTransJpg:true,
            isTempFile:true,
            canCancel: true,
            errorConfirm: true,
            addDatabaseRecord: true
        },
        false);
    }
</script>
    <div style="display:none;" id="containerForGetImage"></div>
    <script type="text/javascript">
        $(function(){
            JBodyValidatorPopoTipExtend.add({obj:"form_TextBoxTitle",park:"right"}).add({obj:"editorContentContainer",park:"bottomLeft",cssClass:"JBodyValidatorErrorExtendFlash3",cssClass2:"JBodyValidatorErrorExtendFlash4"});

        })
        function chooseButtonClick(saveDraft){
            if (saveDraft) document.getElementById("form_btnSaveDraft").click();
            else document.getElementById("form_btnSubmit").click();
        }
        function uploadRemoteImg(saveDraft) {  //上传远程图片（采用此方式以降低服务端一次获取多个图片造成的超时可能），
            //特别说明:JBValidatorContainer.afterSuccess 的方式行不通，回调的时候顺序极为怪异由于时间关系未能找到原因
            if(!false){
                chooseButtonClick(saveDraft);
                return;
            }
            var hostStr = "aofei-pc/";
            var hostStr2 = "http://aofei-pc/";
            var hostStr3 = "aofei-pc:";
            var hostStr4 = "http://aofei-pc:";
            try {
                $("#containerForGetImage").html(editor1.html());
                var imgs = document.getElementById("containerForGetImage").getElementsByTagName("IMG");
                var remoteImage = new Array();
                var len = remoteImage.length;
                for (var i = 0; i < imgs.length; i++) {
                    var src = imgs[i].src.toLowerCase();
                    var lcl = (src.substr(0, 1) == "/"
                    || src.substr(0, hostStr.length) == hostStr.toLowerCase()
                    || src.substr(0, hostStr2.length) == hostStr2.toLowerCase()
                    || src.substr(0, hostStr3.length) == hostStr3.toLowerCase()
                    || src.substr(0, hostStr4.length) == hostStr4.toLowerCase());
                    if (!lcl) remoteImage.push(imgs[i]);
                }
                if(remoteImage.length==0) chooseButtonClick(saveDraft);
                for (var i = 0; i < remoteImage.length; i++) {
                    var img = remoteImage[i];
                    var src = img.src.toLowerCase();
                    JBDialog.show(document.getElementById("btnSubmit2"), src, { title: "正在上传远程图片", showCloseButton: false, modal: true, pos: { to: "obj", park: "outside", parkOutside: "topLeft"} });
                    starUploadImage(img.src,
                    function(url, ajson) {
                        img.src = ajson.url;
                        editor1.html($("#containerForGetImage").html());
                        JBDialog.close();
                        len--;
                        if (len <= 0) chooseButtonClick(saveDraft);
                    },
                    function(url, ajson) {
                        alert("error:" + ajson.message);
                        len--;
                        if (len <= 0)  chooseButtonClick(saveDraft);
                    }
                    , false);
                }
            } catch (e) {
                alert(e.description);
                chooseButtonClick(saveDraft);
            }
        }
    </script>

    

