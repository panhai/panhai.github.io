/* 帐号管理 */
/*顶标签*/
.labels{ clear:both; margin:20px; background-color:#FAFAFA; font-family:"微软雅黑"; font-size:14px; font-weight:bold; height:35px; line-height:35px; border-bottom:1px solid #DFDFDF; _overflow:hidden;}
.labels li{ float:left; padding:0px 10px; height:35px;}
.labels .cur{ color:#ff5000; height:33px; background:#fff; border-bottom:1px solid #fff; border-left:1px solid #dfdfdf; border-right:1px solid #dfdfdf; border-top:2px solid #ff5000; _position:relative; _overflow:hidden;}
.labels a{ color:#3e3e3e;}
.labels a:hover,.labels .cur a{ color:#ff5000;}

/*表单*/
.form{ clear:both; min-height:340px; _height:340px;}
.form li{ height:35px; padding:5px 0px;}
.form *{ vertical-align:middle;}
.form var,.form dfn,.form ins{ display:block; float:left; font-style:normal;}
.form var{ width:125px; text-align:right; font-size:14px; color:#585858; padding-right:10px; line-height:30px; font-family:"微软雅黑";}
.form .text{ border:1px solid #868686; height:30px; line-height:30px; width:170px; padding:0px 5px;}
.form .half{ width:85px; padding:0px 5px;}
.form dfn{ width:190px;}
.form dfn a{ font-size:14px; color:#2354DD;}
.form .submit{ width:114px; height:32px; text-align:center; border:0px; background-color:#ff5e00; cursor:pointer; color:#fff; font-size:16px; font-weight:bold;}
.form strong{ font-family:Arial, Helvetica, sans-serif; color:#333; display:inline-block; line-height:30px;}
.form ins{ font-size:12px; text-decoration:none; line-height:25px; height:25px;}


/*表格*/
.list{ clear:both; margin:20px; font-family:"微软雅黑";}
.list table{ border-collapse:collapse; width:100%; table-layout:fixed;}
.list th{ background-color:#fafafa; color:#3e3e3e; font-size:14px; text-align:center; font-weight:normal; line-height:35px; border:1px solid #ddd; border-width:1px 0px;}
.list th.first{ border-left-width:1px;}
.list th.last{ border-right-width:1px;}
.list tbody td{ border-bottom:1px dashed #ddd; height:60px; font-size:12px; text-align:center;}
.list tbody td.first{ text-align:left; text-indent:10px;}
.list tbody td.last,.list td a{ color:#0060e2; font-family:"宋体";}
.list td a:hover{ color:#ff5e00;}

/*模板*/
.add{ clear:both; text-align:right; margin:20px;}
.add a{ display:inline-block; background-color:#2677e2; color:#fff; font-size:16px; font-family:"微软雅黑"; width:125px; height:30px; line-height:30px;}
/*模板显示*/
.template{ clear:both; margin:20px; border:1px solid #dcdcdc;}
.template dt{ line-height:45px; border-bottom:1px dashed #dcdcdc; height:45px; overflow:hidden;}
.template h2{ float:left; font-size:18px; color:#333; font-family:"微软雅黑"; padding:0px 10px;}
.template tt{ display:block; float:left; padding-left:25px; background:url(../../images/CpCenter/default.jpg) left center no-repeat; color:#2677e2; font-family:"微软雅黑"; font-size:14px;}
.template q{ display:block; float:right; font-size:12px; color:#2677e2; padding-right:30px; line-height:55px;}
.template q a{ color:#2677e2;}
.template dd{ padding:15px; font-size:14px; font-family:"微软雅黑"; color:#999; line-height:20px;}
.template strong{ font-weight:normal; color:#555;}

/*发布表单*/
.publish{ border:3px solid #2677e3; clear:both; margin:20px; overflow:hidden;}
.publish li{ clear:both; min-height:35px; margin:20px;}
.publish var,.publish dfn{ display:block; float:left; font-style:normal;}
.publish var{ width:80px; padding-right:25px; font-size:18px; font-family:"微软雅黑"; text-align:right; height:35px; line-height:35px;}
.publish .text{ border:1px solid #bcbcbc; font-size:12px; width:600px !important; padding:0px 10px;}
.publish input.text{ line-height:35px; height:35px;}
.publish textarea{ line-height:25px; height:150px !important; padding:10px; margin-bottom:20px; margin-bottom:0px\9;}
.publish .btns{ text-align:right; font-size:14px; font-weight:bold;}
.btns input{ width:90px; height:30px; line-height:30px; text-align:center; cursor:pointer; border:0px;}
.btns .submit{ background-color:#2677e3; color:#fff;}
.btns .reset{ color:#2677e3; background-color:#fff;}
textarea.high{ height:200px !important;}