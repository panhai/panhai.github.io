<script type="text/javascript">

    /*判断是手机还是邮箱注册*/
           $('.EMAILS').change(function(){
             $key = $(this).val();
             if($key.indexOf("@")==-1 && $key){
                $('.regist-phone-code').closest('li').show();
                $('.hide').show();
              }else{
                $('.regist-phone-code').closest('li').hide();
                $('.hide').hide();
              }
            
          })
    regSelect(".entrance");

    $('.invite').click(function(){
        $(".regist-invite").show();
        $(this).hide();
    })
</script>