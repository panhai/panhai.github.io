/* 学校就业网-校园招聘 */
.crumbs{ padding-left:8px;}
/*左导航*/
.left{ width:215px; float:left; font-size:0px; margin-top:10px; background-image:url(../../images/schools/jobs/left-body.jpg);}
.left ul{ line-height:35px; font-size:15px; color:#333; font-family:"微软雅黑"; width:198px; margin-left:8px;}
.left h3{ padding:0px 20px;}
.left li{ padding:10px 0px; border-bottom:1px solid #ECEAEB;}
.left li li{ padding:0px 40px; border:0px;}
.left li a{ color:#333; font-size:16px;}
.left li a:hover,.left li a.cur{ color:#2673ec; font-weight:bold;}
.left li.last{ border:0px;}

.right{ width:760px; float:right;}
/*右侧顶条*/
.topic{ height:40px; line-height:40px; border-bottom:1px solid #C8C8C8;}
.topic *{ font-family:"微软雅黑";}
.topic h2{ font-size:18px; color:#2673ec; line-height:39px; border-bottom:2px solid #2673ec; float:left; padding:0px 5px; font-weight:normal;}
.search{ float:right;}
/*下拉列表*/
.select{ position:relative; display:inline-block; float:left; z-index:111; font-size:12px; color:#666; width:100px;}
.select dt{ clear:both; height:28px; border:1px solid #d9d9d9; padding:0px 20px 0px 10px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; line-height:28px; position:relative;}
.select dt i{ display:block; position:absolute; right:3px; top:10px; height:12px; width:12px; background:url(../../images/icons.gif) -12px top; color:#999;}
.select dt span{ color:#999;}
.select dd{ display:none; position:absolute; left:0px; background:#fff; line-height:25px; border:1px solid #d9d9d9; width:98px;}
.select dd.on{ display:block; z-index:555;}
.select dd a{ display:block; text-indent:5px; color:#666;}
.select dd a:hover{ background-color:#2673ec; color:#fff;}
/*搜索框*/
.search-text{ width:180px; height:28px; line-height:28px; padding:0px 10px; border:1px solid #C8C8C8; float:left; margin-left:10px;}
.search-btn{ width:50px; height:30px; background:url(../../images/schools/jobs/search.jpg); cursor:pointer; border:0px; cursor:pointer; float:left;}

/*列表页*/
.jobs{ width:100%; float:left; font-family:"微软雅黑"; margin-bottom:40px;}
.jobs li{ width:100%; float:left; border-bottom:1px dotted #CCCCCC; padding:20px 0px;}
.jobs li.last{ border-bottom:1px solid #ccc;}
.jobs div{ float:left; line-height:30px; font-size:14px; color:#969696; overflow:hidden;}
.jobs p{ white-space:nowrap; overflow:hidden; text-overflow:ellipsis;}
.jobs h4,.jobs h5{ font-size:16px; font-weight:normal;}
.jobs a{ color:#333;}
.jobs a:hover{ color:#2673ec;}
.jobs img{ vertical-align:middle;}
.jobs h4 img,.jobs h5 img{ margin-left:5px;}
.jobs b{ color:#333; font-weight:normal;}
/*职位信息*/
.infor-job{ width:300px; margin-right:35px; height:90px;}
/*公司信息*/
.infor-comp{ width:420px; height:90px;}
/*宣讲会简介*/
.conf-intro{ height:60px; width:300px; margin-right:55px;}
/*时间地点*/
.conf-time{ height:60px; width:400px;}


/*分页*/
.pages{ float:right; margin-bottom:60px; font-size:12px;}
.pages span,.pages a,.pages b{ display:block; float:left; width:23px; height:23px; line-height:23px; text-align:center; font-size:12px; border:1px solid; margin-right:5px;}
.pages a{ border-color:#ababab; color:#1256A9;}
.pages b{ border-color:#1256A9; color:#1256A9; font-weight:normal;}
.pages .prev i,.pages .next i{ background-image:url(../../images/icons.gif); width:12px; height:12px; display:inline-block; font-size:0px; vertical-align:text-bottom; vertical-align:middle\9;}
.pages a.prev,.pages a.next{ width:auto !important; padding:0px 4px;}
.pages span{ border-color:#ccc;}
.pages a.prev i{ background-position:bottom center;}
.pages a.next i{ background-position:center top;}
.pages span.prev i{ background-position:right center;}
.pages span.next i{ background-position:left center;}
/*IE67兼容*/
.pages span i{ *margin-top:5px; _margin-top:0px;}
.pages a.next,.pages a.prev{ _height:18px; _padding-top:5px;}
/*跳转*/
.pages .number{ width:20px; border:1px solid #ccc; padding:0px 5px; font-size:12px; height:23px; line-height:23px; vertical-align:middle;}
.pages .btn{ width:38px; height:23px; background:url(../../images/pages-btnbg.jpg); border:1px solid #aaa; vertical-align:middle;}
