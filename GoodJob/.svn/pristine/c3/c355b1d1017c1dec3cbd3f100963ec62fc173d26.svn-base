<script type="text/javascript">

$(function() {
    var num = 0;
    var CtrSpan = $(".guide-contrl span");
    var guideResume =  $(".tabResume .guide-resume");
/*添加经验*/
    $(".add-exper").click(function(event) {
        event.preventDefault();

        num <=1 ? num++ : num;
            if(num == 1)
            {
               CtrSpan.eq(1).removeClass('hide').addClass('Cur')
                                        .end()
                                        .eq(0).removeClass('Cur');
                
               guideResume.eq(1).removeClass("hide").siblings(".guide-resume").addClass('hide');               
            }
            if(num == 2){
                 CtrSpan.eq(2).removeClass('hide');
                 CtrSpan.removeClass('Cur').eq(2).addClass('Cur')
                 guideResume.eq(2).removeClass("hide").siblings(".guide-resume").addClass('hide');                   
            }   
    });
/*切换经验*/       
    CtrSpan.click(function(event) {
        $(this).addClass('Cur').siblings().removeClass('Cur')
            guideResume.eq($(this).index()).removeClass('hide').siblings(".guide-resume").addClass('hide');
        });
/*范例参考*/
    $(".example").mouseover(function() {
        $(".example-demo").stop().fadeToggle('300');
    }).mouseout(function() {
        $(".example-demo").stop().fadeToggle('300');
    });

/*删除经验*/
    $(".expNext i").click(function(event) {
        event.stopPropagation();

        var spanSize = $(".guide-contrl span:not('.hide')").size(),//有三个经验的时候不能直接删除第二个经验
        oSpan =  $(this).closest('span');
        if( spanSize == 3){
            if(1 == $(this).closest('span').index())return;
        }
     
        if( oSpan.hasClass('Cur')){
            oSpan.removeClass("Cur").addClass('hide').prev().addClass("Cur");
           guideResume.addClass('hide').eq(oSpan.index()-1).removeClass('hide');
        }else{
           oSpan.addClass('hide').siblings(":not('.Cur')").removeClass('Cur')
        }
        num--;
    });
});

    SELECT.next = function(){
        var nextSelect=$(this).data("child");
        if(nextSelect) $(this).siblings(nextSelect).find("dt").click();
    
    }
    
</script>
