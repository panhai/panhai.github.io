/* 首页专用样式 */

/*幻灯片 Z轴3位数*/
.Banner{ width:100%; height:390px; position:relative; overflow:hidden; z-index:111;}
.Banner ul,.Banner ul li,.Banner div,.Banner li a{ position:absolute; left:0px; top:0px; z-index:111; width:100%; height:100%;}
.Banner li a{ background-position:center; background-repeat:no-repeat;}
.Banner div{ z-index:222;}
.Banner ol{}
.Banner ol li{ float:right; margin-left:800px; width:155px; height:90px; background-color:#fff; margin-top:6px; opacity:0.5; filter:alpha(opacity=50); overflow:hidden;}
.Banner ol li.cur{ opacity:1; filter:alpha(opacity=100);}
.Banner .dots{ text-align:center; position:absolute; bottom:33px; height:20px; left: 120px; top:auto;}
/*主体*/
.Main{ margin-top:42px; margin-bottom:70px;}
.Left{ width:234px; float:left;}
.Right{ width:770px; float:right;}

/*普通版块结构*/
.Block{}
.Block dt{ clear:both; border-bottom:1px solid #1562c8; line-height:40px; height:40px;}
.Block dt h3{ float:left; font-size:18px; font-weight:normal;}
.Block dt .more{ display:block; float:right; padding-right:15px; font-size:16px; color:#95bdf3; background:url(../../images/v2/icons/chevron-right.png) right center no-repeat;}
.Block dt .more{ _background-image:url(../../images/v2/icons/chevron-right.gif);}
.Block dt .more:hover{ color:#1562c8; text-decoration:underline;}

.Left .Block{ float:left; width:100%; overflow:hidden;}
/*名企推荐*/
.CompanyPush{}
.CompanyPush dt h3{ color:#1562c8;}
.CompanyPush ul{ width:250px; float:left;}
.CompanyPush li{ width:108px; height:108px; float:left; border:2px solid #f8fbff; margin:13px 11px 0 0; overflow:hidden;}
/* 2018-9-21改 */
.CompanyPush li img{width: 112px; height: 112px;}
/*左侧广告*/
.LeftAdvs{}
.LeftAdvs *{ float:left;}
.LeftAdvs li{ margin-top:28px;}

/*职位*/
.Jobs{}
.Jobs dt h3{ margin-right:10px; padding:0px 5px; line-height:39px; height:39px; color:#95bdf3; cursor:pointer;}
.Jobs dt h3.cur{ border-bottom:2px solid #1562c8; color:#1562c8;}
.Jobs dt ul{ float:right; font-size:14px;}
.Jobs dt li{ float:left; margin-right:1em;}
.Jobs dt ul a{ color:#b5b5b5;}
.Jobs dt a:hover,.Jobs dt a.cur{ color:#1562c8; text-decoration:underline;}
.Jobs dd li{ height:138px; overflow:hidden;}
.Jobs dd li.bg{ background-color:#f8fbff;}
/*职位信息*/
.job{ width:310px; float:left; margin-left:10px; _margin-left:5px;}
.job h4{ margin:20px 0 10px; font-size:20px; line-height:30px; font-weight:normal;}
.job h4,.company h5{ white-space:nowrap; overflow:hidden; _width:100%;}
.job h4 *,.company h5 *{ vertical-align:middle; display:inline-block;}
.job h4 a,.company h5 a{ color:#525252; margin-right:10px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;}
.job h4 a{ max-width:12em;}
.job h4 a:hover,.company h5 a:hover{ color:#1562c8; text-decoration:underline;}
.job h4 i{ background:url(../../images/v2/icons/push-s.png) left 3px no-repeat; font-size:12px; font-family:Arial, Helvetica, sans-serif; color:#ddac15; font-style:normal; padding-left:25px; line-height:40px; font-weight:bold; height:30px; overflow:hidden;}
.job h4 i{ _background-image:url(../../images/v2/icons/push-s.gif);}
.Jobs p{ font-size:14px; color:#a4a4a4; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; line-height:30px; height:30px;}
.Jobs b{ color:#525252; font-weight:normal;}
.Jobs .map{ padding-left:15px; background:url(../../images/v2/icons/mapmark-s.png) left center no-repeat;}
.Jobs .map{ _background-image:url(../../images/v2/icons/mapmark-s.gif);}
/*公司信息*/
.company{ width:340px; float:left; margin-left:30px;}
.company h5{ margin:20px 0 10px; font-size:18px; line-height:30px; font-weight:normal;}
.company h5 a{ max-width:16em;}
.company h5 i{ width:20px; background:url(../../images/v2/icons/check-s.png) left center no-repeat; height:30px;}
.company h5 i{ _background-image:url(../../images/v2/icons/check-s.gif);}
/*福利标签*/
.tags{ padding-top:3px; height:22px; overflow:hidden;}
.tags *{ display:inline-block; vertical-align:top; height:22px; line-height:22px; overflow:hidden; height:23px\9;}
.tags span{ font-size:0px;}
.tags u{ font-size:14px; color:#87b8f8; padding-left:10px; background:url(../../images/v2/tag.png) left top no-repeat; text-decoration:none;}
.tags s{ width:12px; background:url(../../images/v2/tag.png) right top no-repeat;}
.tags u,.tags s{ _background-image:url(../../images/v2/tag.gif);}
/*投递*/
.post{ width:80px; float:right;}
.post a,.post del{ display:block; font-size:16px; text-align:center; line-height:24px; height:24px; margin-top:25px;}
.post del{ background-color:#f2f2f2; color:#a4a4a4; text-decoration:none;}
.post a{ background-color:#fcde4e; color:#1562c8;}
.post a:hover{ background-color:#1562c8; color:#fff;}
.post span{ color:#87b8f8; display:block; line-height:26px; font-size:14px; text-align:right;}
/*很大的更多*/
.Jobs div.more{ text-align:right; margin-top:15px;}
.Jobs div.more a{ display:inline-block; height:40px; line-height:40px; color:#fff; padding:0 30px 0 15px; background:url(../../images/v2/icons/chevrons-right.png) 120px center no-repeat #87b8f8;}
.Jobs div.more a{ _background-image:url(../../images/v2/icons/chevrons-right.gif)}

/*新增友情链接*/
.Links{ border-top:1px solid #95bdf3; padding:10px 0; line-height:35px; font-size:16px; margin-top:20px;}
.Links a{ display:inline-block; color:#95bdf3; padding:0 10px;}
.Links a:hover{ text-decoration:underline; color:#1562c8;}


