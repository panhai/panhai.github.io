/* 校园招聘 */
.banner{ clear:both; height:310px; background:url(../../images/schools/jobs/ban.jpg) center; border-top:1px solid #2673ec;}
.ban-search{ width:770px; height:40px; margin:120px auto 0px; padding:10px;}
/*本页通用版块*/
.blocks{ clear:both; padding:10px 0px;}
.blocks dt{ clear:both; height:40px; border-bottom:2px solid #D9D9D9; line-height:40px;}
.blocks dt h3{ float:left; font-size:20px; color:#333; margin-right:30px; font-family:"微软雅黑"; font-weight:normal; padding:0px 5px; cursor:pointer;}
.blocks dt h3.cur{ border-bottom:2px solid #ff5000;}
.blocks dt .more{ float:right; font-size:14px; color:#333;}
.blocks .more:hover{ color:#ff5e00;}

/*推荐职位列表*/
.jobs-push{ width:100%; border-bottom:1px solid #E7E7E7; float:left;}
.jobs-push li{ width:50%; float:left; padding:15px 0px; overflow:hidden; line-height:25px;}
.jobs-push var{ display:block; float:left; width:141px; height:88px; overflow:hidden; border:1px solid #E7E7E7; margin-right:10px;}
.jobs-push *{ white-space:nowrap; overflow:hidden; text-overflow:ellipsis;}
.jobs-push div{ margin-bottom:10px;}
.jobs-push h4{ float:left; max-width:210px; font-size:18px; font-family:"微软雅黑";}
.jobs-push h4 a{ color:#0353B6;}
.jobs-push h4 a:hover{ color:#ff5000;}
.jobs-push small{ color:#ff5000; font-size:12px; padding-left:5px;}
.jobs-push small img{ vertical-align:text-bottom;}
.jobs-push q{ font-size:14px; color:#999; font-family:"微软雅黑"; padding-left:1em;}
.jobs-push p{ font-family:"微软雅黑"; font-size:14px; color:#999; width:320px;}
.jobs-push b{ font-size:16px; color:#333; font-weight:normal;}
.jobs-push span{ padding:0px 5px; font-size:12px; background-color:#fafafa; border:1px solid #C5C5C5; margin-right:5px;}
.jobs-push samp{ font-size:14px; font-family:"微软雅黑"; float:right;}

/*宣讲会列表*/
.confs{}
.confs dt ul{ float:right; font-size:14px; padding-right:20px;}
.confs dt ul li{ float:left;}
.confs dt ul a{ color:#6C6C6C; padding:0px 15px; border-right:1px solid #C5C5C5;}
.confs dt ul a:hover{ color:#ff5e00;}
.confs dd{ width:100%; overflow:hidden;}
.confs dd ul{ height:315px; overflow:hidden;}
.confs dd li/*{ float:left;}
.confs li div*/{ width:320px; height:280px; float:left; margin-right:20px; padding-top:25px;}
.confs div a{ display:block; border:1px solid #EAEAEA; height:280px;}
.confs div.last{ margin:0px;}
.confs var{ display:block; width:320px; height:102px; clear:both; background:url(../../images/schools/jobs/conf-bg.jpg); font-size:20px; color:#fff; font-family:"微软雅黑"; text-align:center; line-height:102px; font-style:normal; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;}
.confs dfn{ display:block; clear:both; height:40px; background-color:#F5F5F5; line-height:40px; font-style:normal; font-size:14px; color:#333; text-align:center; font-family:"微软雅黑";}
.confs dfn b{ font-size:20px; color:#025CD7; display:inline-block; width:50px; font-weight:normal; text-align:right;}
.confs h4{ line-height:40px; font-size:18px; color:#333; font-family:"微软雅黑"; font-weight:normal; padding:0px 10px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;}
.confs p{ font-size:14px; color:#747474; line-height:25px; padding:0px 5px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; font-family:"微软雅黑";}
.confs i,.confs s,.confs q{ display:inline-block; width:16px; height:18px; overflow:hidden; background-image:url(../../images/schools/jobs/icons.gif); vertical-align:text-bottom; margin-right:5px;}
.confs i{ background-position:left;}
.confs s{ background-position:center;}
.confs q{ background-position:right;}
.confs .clear{ padding:15px; text-align:center;}
.confs .clear span{ width:18px; height:5px; display:inline-block; background-color:#E1E1E1; margin-right:5px;}
.confs span.cur{ background-color:#ff5e00;}

/*名企招聘*/
.companies{ width:1010px; padding:20px 0px 60px; float:left;}
.companies li{ width:158px; border:1px solid #E8E8E8; height:78px; overflow:hidden; position:relative; float:left; margin:0px 8px 8px 0px;}
.companies p{ width:100%; height:100%;}
.companies div{ position:absolute; width:100%; height:100%; left:0px; top:0px; background-color:rgba(0,88,205,0.8); filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#cc0058cd,endColorstr=#cc0058cd); display:none;}
.companies table{ width:80%; height:94%; vertical-align:middle; margin:3% 10%;}
.companies td{ line-height:30px; color:#fff; font-family:"微软雅黑";}
.companies a:hover div{ display:block;}

/*浮动条*/
.float2{ width:80px; border-top:1px solid #ccc; font-size:18px; font-family:"微软雅黑";}
.float2 li{ width:78px; height:78px; border:1px solid #ccc; border-top:0px; background-color:#fff;}
.float2 em{ display:block; padding:13px 15px; text-align:center; font-style:normal; color:#999;}
.float2 em img{ position:relative; top:2px; margin-left:4px;}
.float2 li.cur{ background-color:#3F82D9;}
.float2 .cur em{ color:#fff;}