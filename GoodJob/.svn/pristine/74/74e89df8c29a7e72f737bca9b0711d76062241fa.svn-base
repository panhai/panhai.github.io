<script src="js/jquery.js"></script>
<script src="js/v2/all.js"></script>

<script>
$(function(){
	Boxes(".Radios");
 


    $(".SendVerify").click(function(){
      $(".SchoolId").val($(this).data('id'));
      $(".Application").closest(".FullScreenPlugin").fadeIn();
    });

    var tip1=$(".SendVerify").val(),
        tip2='秒后重新获取';


    $(".Application").find(".apply").click(function(){
      $(".Application").closest(".FullScreenPlugin").fadeOut();
      $(".phone p").html("系统已向<span class='cur'>13515182535</span>发送了短信验证码")
       var O=$(".SendVerify");
            if(O[0].disabled) return;
            var number=60;
            O[0].disabled=true;
            O.addClass("disabled").val(number+tip2);
            O[0].timer=setInterval(function(){
                number--;
                O[0].value=number+tip2;
                if(!number)
                {
                    clearTimeout(O[0].timer);
                    O.timer=0;
                    O.disabled=false;
                    $(O).removeClass("disabled").val(tip1);
                }
            },1e3);

        })
})



</script>


