    <script>

        //banner轮播
        var timer = 0;
        var i= 1;
        function banner() {
            var interval = setInterval(function () {
                timer++;
                if(timer==5){
                    ++i;
                    $(".bannerbox").children().fadeOut(600);
                    $(".bannerbox").children(".banner"+i).fadeIn(600);
                    $(".banner .page p").removeClass("iconBg");
                    $(".banner .page p:nth-child("+ i +")").addClass("iconBg")
                }

                if(timer==10){
                    ++i;
                    $(".bannerbox").children().fadeOut(600);
                    $(".bannerbox").children(".banner"+i).fadeIn(600);
                    $(".banner .page p").removeClass("iconBg");
                    $(".banner .page p:nth-child("+ i +")").addClass("iconBg");
                }

                if(timer==15){
                    i=1;
                    $(".bannerbox").children().fadeOut(600);
                    $(".bannerbox").children(".banner"+i).fadeIn(600);
                    $(".banner .page p").removeClass("iconBg");
                    $(".banner .page p:nth-child("+ i +")").addClass("iconBg");
                    timer = 0;
                }
            },1000);

            $(".banner").mouseover(function () {
                clearInterval(interval);
            })
        }
        banner();

        $(".banner").mouseleave(function () {
            banner();
        });
        function icon() {
            if(i==1){
                $(".banner .page").find().data("num")}
        }



        //点击切换Banner
        $(".banner .page p").click(function () {
            $(this).siblings().removeClass("iconBg");
            $(this).addClass("iconBg");
            i=$(this).data("num");
            $(".bannerbox").children().fadeOut(600);
            $(".bannerbox").children(".banner"+i).fadeIn(600);
        });


        //点击头像切换文本
        $(".content .headPortrait a").click(function () {
            var getValue = $(this).data("value");
            $(this).siblings().find("img").removeClass("cur");
            $(this).find("img").addClass("cur");
            $(".content .praise .somebody").fadeOut(300);
            $(".content .praise .somebody:nth-child("+ getValue+")").fadeIn(300)
        });





        var cont = $(".content .growth .example");
        var lineTop = $(".content .growth .line").offset().top;
        //动画显示计算
        function according() {
            cont.map(function (i) {
                    if($(this).offset().top < $(window).scrollTop()+ $(window).height()*.75){
                        $(this).removeClass("exampleA exampleB");

                    }else{
                        if(i%2==0){
                            $(this).addClass("exampleA");
                        }
                        if(i%2==1){
                            $(this).addClass("exampleB");
                        }
                    }
            });

        }

        var Btop = $(".content .growth .example:nth-child(1)").offset().top;
        var Line = $(".content .growth .line");
        //中线高度计算
        function line() {
            //线条高度计算
            if(Btop< $(window).scrollTop()+ $(window).height()*.75){
                Line.height( (lineTop-($(window).scrollTop()+ $(window).height()*.75))*-1).removeClass("lineTran")
            }else {
                Line.addClass("lineTran")
            }
            if((lineTop-($(window).scrollTop()+ $(window).height()*.75))*-1>=720){
                Line.height(720);
                $(".content .growth .future,.content .growth .arrow").removeClass("animt");
            }else {
                $(".content .growth .future,.content .growth .arrow").addClass("animt");
            }
        }

        //页面首次加载调用一次，预防页面刷新停留在该文本没内容显示
        according();
        line();

        //好工作&才+发展历程  animation 总体调用
        function animetion() {
            $(window).on("scroll",function (e) {
                e.preventDefault();
                according();
                line();
            })
        }
        animetion();
