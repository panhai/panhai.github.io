		var paper=Raphael(this,130,130);
		paper.setViewBox(-65,-65,130,130);
		paper.circle(0,0,65).attr({
			fill:'#eef6ff',
			opacity:.65,
			stroke:false
		});
		paper.circle(0,0,54).attr({
			stroke:false,
			fill:color
		});
