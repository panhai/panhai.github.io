/* 查看简历 */
body{ background-color:#fff; font-family:"微软雅黑";}
.summary{ line-height:45px; font-size:14px; color:#666;}
.main{ border:1px solid #b6b6b6; border-top:#2677e2 2px solid;}

.block{ clear:both; width:900px; border-bottom:10px solid #F1F1F1; margin:0px auto 20px 30px; padding-bottom:20px;}
.profile var{ display:block; width:160px; height:160px; overflow:hidden; float:left; margin:0px 30px 5px 0px; border:1px solid #E6E6E6;}
.profile p{ font-size:14px; line-height:30px; color:#666;}
.profile h1{ font-size:24px; color:#333; line-height:35px;}
.profile small{ font-size:14px; font-weight:normal;}
.profile .first{ line-height:40px;}
.profile b{ font-weight:normal; color:#333;}
.profile q{ display:inline-block; width:270px;}
.profile p img{ vertical-align:text-bottom;}

.block h2,.block h3{ font-size:20px; line-height:45px; clear:both; color:#3d3d3d;}
.purpose{}
.purpose p q{ display:inline-block; width:300px; line-height:45px; color:#666;}
.purpose b{ color:#333; font-weight:normal;}

.intro{}
.intro p{ text-indent:2em; font-size:16px; color:#333; margin:15px 0px; line-height:20px;}

.educate{}
.educate p{ line-height:20px; font-size:16px; color:#333; margin:15px 0px;}

.exp{ padding:0px 10px 20px;}
.exp dl{ clear:both; border-left:1px solid #f00; padding-left:20px; line-height:25px; margin:20px 0px;}

/*专业技能*/
.skills{ line-height:20px; padding:0px 10px 20px;}
.skills li{ height:20px; margin:15px 0px; border-left:1px solid #f00; padding-left:20px;}
.skills h5,.skills tt{ font-size:14px; display:inline-block; vertical-align:top; float:left;}
.skills h5{ width:200px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; font-weight:normal;}
.skills tt{ width:100px; font-family:"微软雅黑";}

.noborder{ border:0px; padding:0px 10px 20px;}

.bar{ height:50px; width:100%; z-index:11111; overflow:visible !important;}
.bar dt{ float:left;}
.bar dd{ float:right;}
.bar a{ display:inline-block; height:33px; line-height:33px; position:relative; top:9px; vertical-align:top;}
.bar dt a{ background-image:url(../../images/CpCenter/resume.png); margin-left:10px;}
.bar .down{ width:80px; background-position:left top;}
.bar .down:hover{ background-position:left bottom;}
.bar .fav{ width:40px; background-position:-80px top;}
.bar .fav:hover{ background-position:-80px bottom;}
.bar .plus{ width:40px; background-position:80px top;}
.bar .plus:hover{ background-position:80px bottom;}
.bar .print{ width:40px; background-position:right top;}
.bar .print:hover{ background-position:right bottom;}
.bar dt a span{ position:absolute; display:none; left:0px; color:#666; background:#fff; border:1px solid #666; line-height:25px; padding:0px 5px; top:-30px; white-space:nowrap; font-size:14px;}
.bar dt a:hover span{ display:block;}

.bar dd a{ border:1px solid #fff; color:#fff; padding:0px 10px; font-size:14px; margin-right:10px;}
.bar dd a:hover{ color:#fff; background-color:#2677e2; border-color:#2677e2;}