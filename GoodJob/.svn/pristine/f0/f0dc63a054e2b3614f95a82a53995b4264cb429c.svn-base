/* 统计信息 */
/*主标题*/
h2{ float:left; line-height:45px; padding-left:20px; color:#454545; font-size:18px; font-family:"微软雅黑"; margin-bottom:20px; font-weight:normal;}
h2{ _padding-top:10px;}
h2.bd{ border-bottom:1px solid #e1e1e1; float:none; clear:both; margin:0px 20px 20px; padding:0px;}

/*顶部表单*/
.form{ clear:both; margin:20px 20px 10px; height:35px; _z-index:11;}
.form-left{ float:left; padding-top:5px;}
.form-left a{ line-height:20px; height:20px; font-size:12px; color:#3d3d3d; padding-left:20px; background:url(../../images/CpCenter/icons.jpg) left top no-repeat; display:inline-block; position:relative; margin-right:10px;}
.form-left a.cur{ background-position:left bottom; color:#ff5000; font-weight:bold;}
.form-left samp{ display:inline-block; font-size:12px; color:#333; padding-top:20px; line-height:15px;}
