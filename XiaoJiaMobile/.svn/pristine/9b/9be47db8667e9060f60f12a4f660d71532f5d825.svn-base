<script src="js/jquery-2.1.3.min.js"></script>
<script>
    $(".theme-nav .nav-flex").click(function () {
        if($(this).hasClass("the")){
            $(".page2").hide();
            $(".page1").show();
            $(this).removeClass("the");
            $(this).find('i').css({'color':'#1886f6'})
            $(".theme-nav .nav-flex").removeClass("the").find("i").removeClass("icon-fanhui").addClass("icon-arrow-down");
        }else {
            $(".theme-nav .nav-flex").removeClass("the").find("i").removeClass("icon-fanhui").addClass("icon-arrow-down");
            $(this).addClass("the").find("i").removeClass("icon-arrow-down").addClass("icon-fanhui");
            if($(this).data("page")==1){
                $(".page1").hide();
                $(".page2").show();
            }
            if($(this).data("page")==2){
                $(".page1").hide();
                $(".page2").show();
            }
        }

    })



    //弹框一
    $(".Bomb .Bomb-text a").click(function () {;
        var getTxt = $(this).text();
        $(".bounced").text(getTxt);
        $(".black-background").hide(0);
        $(".Bomb").addClass("move");
    });
    $(".black-background").click(function () {
        $(this).hide(00);
        $(".Bomb").addClass("move");
    });
    $(".bounced").click(function () {
        $(".black-background").show();
        $(".Bomb").removeClass("move");
    });


    //$(function) 选中添加主题色
    // left-menu
    $(function(){
        $('.left-menu a').on('click',function(){
            var color = $('.theme-nav .nav-flex.coving.the b').css('color');
           $(this).css({'color':color,'font-weight':'800','background':'#fff'}).siblings('a').css({'color':'#333','font-weight':'200','background':'#eff3f6'})
        })
        
        $('.right-menu a').click(function(){
            var color = $('.theme-nav .nav-flex.coving.the b').css('color');
            $(this).css({'color':color,'font-weight':'800'}).siblings('a').css({'color':'#333','font-weight':'200'})
        })
    })

</script>


