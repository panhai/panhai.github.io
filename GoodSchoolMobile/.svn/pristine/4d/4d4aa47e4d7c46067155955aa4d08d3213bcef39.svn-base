<body>
<div class="apply" style=" padding-bottom:40px;">
    <div class="from_title"><a class="return_ico" href="javascript:history.go(-1);"></a>还有10个免费的名额，赶紧申请</div>
    <div id="alert" class="form-warning"></div>
    <form class="form-widget" name="myform">
      <div class="form-group" style="border-top:1px solid #E5E5E5;">
        <label class="form-label">联系人:</label>
        <div class="form-control">
          <label class="input-group">
            <input id="name" type="text" class="input-text" placeholder='请输入姓名'></label>
          </label>
        </div>
      </div>
      <div class="form-group">
        <label class="form-label">性别:</label>
        <div class="form-control">
            <div class="radiobox">
              <input type="radio" class="radio_css" value="1" name="sex" ><label>男</label>
              <input type="radio" class="radio_css" value="2" name="sex" ><label>女</label>
            </div>
        </div>
      </div>
      <div class="form-group">
        <label class="form-label">手机:</label>
        <div class="form-control">
          <label class="input-group">
            <input id="phone" type="text"  class="input-text" placeholder='请输入手机号码' maxlength="11"></label>
          </label>
        </div>
      </div>
      <div class="form-group">
        <label class="form-label">验证码:</label>
        <div class="form-control yzm">
          <label class="input-group">
            <input id="yzm" type="text"  class="input-text" placeholder='请输验证码' maxlength="11"></label>
          </label>
        </div>
        <div class="yzm01">获取验证码</div>
      </div>
<script type="text/javascript">
$(function(){
	$(".yzm01").click(function(){
		var o=$(this);
		if(o.hasClass("now")) return;
	    var step=59;
	    o.addClass("now").html("60秒(重发)");
	    var _res = setInterval(function()
	            {   
	                o.html(step+'秒(重发)');
	                step-=1;
	                if(step <= 0){
	                o.removeClass("now").html('获取验证码');
	                clearInterval(_res);//清除setInterval
	                }
	            },1000);
	})
})
</script>
      <div class="form-group" style="border-bottom:1px solid #E5E5E5;">
        <label  class="form-label">QQ:</label>
        <div class="form-control">
          <label class="input-group">
            <input id="qq" type="text" class="input-text" placeholder='请输入QQ号码'></label>
          </label>
        </div>
      </div>
      <textarea class="advice-text" placeholder='如有其它需求请在此时输入。'></textarea>
      
      <button id="btn" class="f_btn" >提交申请</button>
      
      
    </form>
</div>
<script type="text/javascript">
$(function(){
	
	var tishi='<div class="bffbdbe"><img src="images/Prompt01.png">';
	$(".radiobox").click(function(){
		if($("#name").val().length==0){$("#alert").html(tishi+'<p>请输入用户名！</p></div>')};
		if($("#name").val().length!=0){$("#alert").html('')};
	})
	
	$("#qq").focus(function(){
		var oPhone=$("#phone").val().length;
		if(oPhone==0 || oPhone!=11){$("#alert").html(tishi+'<p>请输入正确的手机号位数！</p></div>')};
		if(oPhone==11){$("#alert").html('')};
	})

	$("#phone,#qq").keyup(function(){
		$(this).val($(this).val().replace(/[^0-9]/g,''));
	});
	
	$("#phone").focus(function(){
		var sex_checked = false;
		var sex = myform.elements['sex'];
		for(var i=0;i<sex.length;i++){
			if(sex[i].checked){
				sex_checked = true;
				break;
			}
		}
		if(!sex_checked){
			$("#alert").html(tishi+'<p>请选择性别！</p></div>')
			return false;
		}
	});
	
	
	$("#btn").click(function(){
		if($("#name").val().length==0){
			$("#alert").html(tishi+'<p>请输入用户名！</p></div>');
			return false;
		};
		
		var sex_checked = false;
		var sex = myform.elements['sex'];
		for(var i=0;i<sex.length;i++){
			if(sex[i].checked){
				sex_checked = true;
				break;
			}
		}
		if(!sex_checked){
			$("#alert").html(tishi+'<p>请选择性别！</p></div>')
			return false;
		}
		
		var oPhone=$("#phone").val().length;
		if(oPhone==0 || oPhone!=11){
			$("#alert").html(tishi+'<p>请输入正确的手机号位数！</p></div>');
			return false;
		};
		
		if($("#qq").val().length==0){
			$("#alert").html(tishi+'<p>请输入QQ号！</p></div>');
			return false;
		}; 
	})
	

})
	
