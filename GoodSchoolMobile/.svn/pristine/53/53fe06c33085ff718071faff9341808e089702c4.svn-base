/* 首页 */
body{ background-color:#0189FF;}
.share{position: fixed; top:0; width: 100%; background: rgba(0,0,0,0.7);}
.share .ico{position: absolute; top:0; right: 0.6rem; width: 10%;}
.share .ico img{width: 100%;}
.share .close{position: absolute; width: 8%; top:20px; left: 22px; font-size: 1.5rem; color: #808080;}
.share .close img{width: 100%; max-width: 73px;}
.share .font{margin:20px auto; width: 58%;}
.share .font img{width: 100%; max-width: 900px;}
.adv{ text-align:center; font-size:0px; background:url(../images/advbg.jpg) bottom center repeat-x;}
.adv img{ max-width:900px; width:100%; height:auto;}
.detail{ display:block; margin:20px auto; text-align:center; color:#fff; font-size:1rem; width:165px; line-height:40px; height:40px; border-radius:20px; background-color:#0189ff;}

.scroll{ width:100%; overflow:hidden; margin:20px 0px;}
.scroll li{ border:1px solid #efefef; float:left; margin-right:10px; font-size:0px;}

@media screen and (max-width:359px){
	.scroll li img{ width:120px;}
}
@media screen and (min-width:360px) and (max-width:639px){
	.scroll{ margin-top:50px;}
}