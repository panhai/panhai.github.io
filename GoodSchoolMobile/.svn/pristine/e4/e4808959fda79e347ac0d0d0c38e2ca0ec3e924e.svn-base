    </div>
    <!--
    <a href="javascript:void(0)" class="sbmBtm">提交回访记录</a>
    -->
    <input type="submit" class="sbmBtm" value="提交回访记录">

    <div class="black-background"></div>
    <div class="Bomb">
        <div class="Bomb-title">选择课程</div>
        <input type="hidden"/>
        <div class="scroll">
            <div class="Bomb-text">
                <a href="javascript:void (0)" data-val="1" title="兰博基尼">兰博基尼</a>
                <a href="javascript:void (0)" data-val="2" title="法拉利">法拉利</a>
                <a href="javascript:void (0)" data-val="3" title="玛莎拉蒂">玛莎拉蒂</a>
                <a href="javascript:void (0)" data-val="4" title="宾利">宾利</a>
                <a href="javascript:void (0)" data-val="5" title="劳斯莱斯">劳斯莱斯</a>
                <a href="javascript:void (0)" data-val="6" title="福特">福特</a>
                <a href="javascript:void (0)" data-val="7" title="布加迪">布加迪</a>
                <a href="javascript:void (0)" data-val="8" title="野马">野马</a>
                <a href="javascript:void (0)" data-val="9" title="GRT">GRT</a>
                <a href="javascript:void (0)" data-val="10" title="保时捷">保时捷</a>
                <a href="javascript:void (0)" data-val="11" title="大东风">大东风</a>
                <a href="javascript:void (0)" data-val="12" title="二手奥拓">二手奥拓</a>
            </div>
        </div>

    </div>


    <script src="../js/jquery.js"></script>
    <script src="../js/mobiscroll2/mobiscroll.min.js"></script>
    <script>
        //多选课程
        $(".templateLayer .indexClass").on("click",function () {
            var getLabel = $(this).find("label");
            if(getLabel.hasClass("cur")){
                getLabel.removeClass("cur");
            }else {
                getLabel.addClass("cur");

            }
        })


        $(".black-background").click(function () {
            $(this).hide();
            $(".Bomb").hide();
        });
        $(".Bomb a").click(function () {
            $(".black-background").hide();
            $(".Bomb").hide();
            $(".templateLayer .className").text($(this).text());
        });
        $(".borderBt.setClass").click(function () {
            $(".black-background").show();
            $(".Bomb").show();
        });

        $(".templateLayer .statusBox").click(function () {
            $(".templateLayer .statusBox").removeClass("cure");
            $(this).addClass("cure");
            var status = $(this).data("status");
            $(".pageOne,.pageTwo,.pageThree,.pageFour").hide(0);
            if(status==1){
                $(".pageOne").show(0);
            }
            if(status==2){
                $(".pageTwo").show(0);
            }
            if(status==3){
                $(".pageThree").show(0);
            }
            if(status==4){
                $(".pageFour").show(0);
            }
        });

        //面试时间弹框JS
        function setTime() {
            var curr = new Date().getFullYear();
            var opt = {
                defaultValue: new Date(2018,2,1,1,1),//设置默认时间
                preset: 'datetime',
                'theme': 'android-ics light',
                'mode': 'scroller',
                'lang': 'zh',
                'display': 'bottom',
                'startYear': 2010,
                'endYear': curr + 10,
                dateFormat: 'yyyy-mm-dd',
                height:30,
                rows:3
            }
            $(".templateLayer .urlLayer .Txtspan").scroller(opt);
        }
        setTime();



    </script>
</body>
</html>