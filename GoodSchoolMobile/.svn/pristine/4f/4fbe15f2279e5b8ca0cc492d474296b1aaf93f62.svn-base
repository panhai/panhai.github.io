<script>
$(function(){
  
 $(".c_l_right a").click(function() {
		 $(this).parent().parent().next().toggle();
 });
		  
$(".rating_star a").click(function(){
	var span=$(this).parent();
	var index=span.find("a").index($(this))+1;
	span.removeClass().addClass("rating_star star_"+index);
	span.siblings(".fenshu").html(index+".0");
	
	var root = span.parent().parent().parent();
	var score1=parseFloat(root.find(".teachers .fenshu").html());
	var score2=parseFloat(root.find(".environment .fenshu").html());
	var score3=parseFloat(root.find(".Service .fenshu").html());
	var all=score1+score2+score3;
	
	root.find(".rating_result").html((all / 3).toFixed(1) + "分&nbsp;&nbsp;" + (all <= 4 ? "差" : all > 9 ? "好" : "中"));
	
});
});

$(function(){
	$(".Publish_btn").click(function(){
		if($(this).siblings().val().length==0){ 
			alert("请填写点评内容");
			return;
		}
		else{
			$(".compose_rating_box").hide();
			$(this).parent().parent().siblings().find("a").html("已点评");
			$(this).parent().parent().siblings().find("a").addClass("point");
		}
	});  
})
</script>
