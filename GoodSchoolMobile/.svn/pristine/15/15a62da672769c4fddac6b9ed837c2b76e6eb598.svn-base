$(function(){
	
	CHItab(".stipend-exchange02",".nav-switch .item",".comment-content .list",{"way":"click"})
	
	$(".return-stipend .content span.dh").click(function(){
		toggleBJ();
		$(".return-stipend-tip").fadeIn();
	});
	$(".background").click(function(){
		$(".return-stipend-tip").fadeOut();
		$(".return-stipend-success").fadeOut();
		toggleBJ();
	});
	$(".return-stipend-tip .close").click(function(){
		$(this).closest(".return-stipend-tip").hide();
		toggleBJ();
	});
	
	$(".return-stipend-tip .ash").click(function(){
		$(this).closest(".return-stipend-tip").hide();
		$(".return-stipend-success").fadeIn();
	});
	$(".return-stipend-success .close").click(function(){
		$(this).closest(".return-stipend-success").hide();
	});
})
</script>







