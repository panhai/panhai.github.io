*{margin:0; padding:0;}
html{font-size:20px;}
input[type=reset],input[type=button],input[type=submit]{ -webkit-appearance:none;}
body{font-family: 微软雅黑; height: 100%; color:#333;}
a{border:none; text-decoration:none; -webkit-tap-highlight-color: rgba(0,0,0,0);}
li{list-style:none; display:inline;}
.clear{clear:both;}
.lazy{background: url(../images/loading.gif) no-repeat scroll center center rgba(0,0,0,0);}
.highlight { color:#ff6600; }
.successMsg{display: none;}
.display{ display:none;}

/*机构后台→个人设置*/
.jg-set{ margin-bottom:50px;}
.jg-set .successMsg,.jg-set .errorMsg,.jg-set .errorMsg2{ margin-bottom:10px;}
.jg-set .btn{ padding:10px;}
.jg-set01{}
.jg-set02{ }
.jg-set .set-list{ background:#fff; border-top:1px solid #f5f5f5;}
.jg-set .group{ display:-moz-box; display:-webkit-box; display:box; height:50px; line-height:50px; font-size:0.8rem; border-bottom:1px solid #f2f2f2; position:relative;}
.jg-set .group .exit{ padding-left:15px; color:#0066cc;}
.jg-set .group.d-height{ height:auto; line-height:25px; padding:5px 15px;}
.jg-set .group.d-height .label{ width:auto; height: auto; line-height:25px; padding-right:10px; padding-left:0;}
.jg-set .group.d-height .text01{ padding:8px 25px 8px 0;}
.jg-set .group {}
.jg-set .label{ display:inline-block; width:80px; height:50px; line-height:50px; text-align:left; padding-left:10px; }
.jg-set .text01{-moz-box-flex:1; -webkit-box-flex:1; box-flex:1; text-align:right; padding-right:25px; color:#999;}
.jg-set .text02{-moz-box-flex:1; -webkit-box-flex:1; box-flex:1; text-align:left; padding-left:5px; color:#333; border:none; font-size:0.8rem; display:block; line-height:50px;}
.jg-set .btn01{width:75px; height:35px; line-height:35px; background:#333; position:absolute; top:10px; right:10px; color:#fff; background:#2F8AFF; border-radius:2px;  text-align:center; font-size:0.7rem; display:none;}


.jg-btnbig{ width:100%; background:#ff7f00; height:35px; line-height:35px; text-align:center; color:#fff; box-sizing:border-box; border-radius:2px; font-size:0.8rem; border:none;}
.errorMsg,.errorMsg2{ line-height: 24px; text-indent: 12px;  color:#e4133a; font-size: 0.6rem;  border: 1px solid #e86f6f; background: #f1cece; box-sizing:border-box; width:100%; /*z-index:100;*/}
.top-navbar{ background:#2F8AFF; height:48px; width:100%; color:#fff; line-height:48px; position:relative;  font-size:16px; text-align:center;}
.top-navbar .navbar-icon{ width:30px; height:30px; display:inline-block; vertical-align:middle; background:url(../img/navbar-icon.png) no-repeat; background-size:30px auto; position:absolute; top:8px; left:5px;}
.m-right{ margin-right:12px;}

.background{ background:rgba(0,0,0,0.5); position:fixed; top:0; left:0; z-index:99; width:100%; height:45px; padding:10px; box-sizing:border-box; display:none;}
.box{ position:fixed; left:50%; margin-left:-150px; top:200px; z-index:100; width:300px; background:#fff;}
.box-title{ height:45px; line-height:45px; text-align:center; color:#fff; background:#2F8AFF; position:relative;}
.box-title .close{ width:30px; height:30px; position:absolute; top:5px; right:5px; background:url(../img/close-big.png) no-repeat; background-size:30px auto;}
.box-text{ height:100px; }



