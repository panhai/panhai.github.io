/* CSS Document */

*{ margin:0px; padding:0px; -webkit-appearance:none;}
html{ font-size:125%;}
body{ font-family:"微软雅黑";}
a{ text-decoration:none;}
a img{ border:0px;}
ul,ol{ list-style:none;}
.clear{ clear:both;}
/*半透明背景*/
#CHIbackgroundDiv{ display:none; position:fixed; width:100%; height:100%; background:rgba(0,0,0,0.5); z-index:11111; left:0px; top:0px;}
.sign-up{ display:block;}


.tip{ display:none; position:fixed; width:270px; height:200px; background:#fff; left:0px; top:0px; z-index:22222; text-align:center;}
.tip pre{ font-size:1rem; color:#00A20E; font-family:"微软雅黑"; font-weight:bold; margin:25px auto 10px;}
.tip img{ vertical-align:text-bottom;}
.tip p{ font-size:12px; color:#333; line-height:20px;}
.tip input{ background:#FF7F00; color:#fff; font-size:1rem; text-align:center; width:87px; height:33px; display:block; margin:15px auto; border:0px; font-family:"微软雅黑"; cursor:pointer;}

