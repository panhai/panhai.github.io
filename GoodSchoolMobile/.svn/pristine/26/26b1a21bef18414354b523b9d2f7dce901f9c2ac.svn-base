<script src="../js/jquery.js"></script>
<script src="../js/admin/Agency.js"></script>
<script src="../js/iscroll.js"></script>
<script type="text/javascript">
var wWdith=$(window).width();
var wHeight=$(window).height();
$(".scroller li").width(wWdith);
$(".scroller li").height(wHeight);
$("#wrapper").height(wHeight);
$(".scroller").width(wWdith*4);

var myScroll;

function loaded() {
	
	
	myScroll = new IScroll('#wrapper', 
	{
		snap: 'li', 
		momentum: false,
		scrollX: true, scrollY: false, 
	});
	
	myScroll.on('scrollEnd', function () {
		
		//console.log($(this).parent());
		document.querySelector('#indicator li.active').className = '';
		document.querySelector('#indicator li:nth-child(' + (this.currentPage.pageX+1) + ')').className = 'active';
		$("title").html("步骤"+(this.currentPage.pageX+1));
	} ); 
	
//	setInterval(function(){
//		console.log(myScroll.currentPage.x);
//	},2000)

}
</script>
