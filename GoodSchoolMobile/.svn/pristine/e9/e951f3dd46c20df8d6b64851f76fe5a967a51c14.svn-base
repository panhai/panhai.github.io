<script type="text/javascript">
    // 打开服务说明
    $(".welfare").click(function(){
        $(".Cover").show();
        $(".serviceTip").show().addClass('slideInUp animated');
    });
    $(".service-close").click(function(){
        $(".Cover").hide();
        $(".serviceTip").hide();
           $(".procedureTip").hide();
    })
    // 打开遮罩层
    $(".Cover").click(function(){
        $(this).hide();
        $(".serviceTip").hide();
        $(".procedureTip").hide();
    })
    // 打开报名详情
    $(".consult-State").click(function(){
        $(".Cover").show();
        $(".procedureTip").show().addClass('slideInUp animated');
    });

    // 查看更多
    $(".course-more").click(function(){
        if ($(this).hasClass('on')) {
            $(this).removeClass('on').find('em').text('查看全部');
            $(".course-Info-in").height(200);
        }else{
            $(".course-Info-in").height("auto");
            $(this).addClass('on').find('em').text('收起');
        }
      
    })
</script>