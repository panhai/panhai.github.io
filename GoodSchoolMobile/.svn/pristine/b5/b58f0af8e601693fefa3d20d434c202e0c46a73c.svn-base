<script type="text/javascript">
$(function(){
	$(".item-yz").click(function(){
		var o=$(this);
		if(o.hasClass("now")) return;
	    var step=59;
	    o.addClass("now").html("60秒(重发)");
	    var _res = setInterval(function()
	            {   
	                o.html(step+'秒(重发)');
	                step-=1;
	                if(step <= 0){
	                o.removeClass("now").html('获取验证码');
	                clearInterval(_res);//清除setInterval
	                }
	            },1000);
	});

    $(".info-addre-in").click(function(){
        $(".apply-area").show();
    })
	
//弹框 校区时段	
	$(".area-time .list-munu .l-title").click(function(){
		$(this).closest(".item").siblings().removeClass("cur");
		$(this).closest(".item").addClass("cur");
		$(this).closest(".item").siblings().find("dd").slideUp();
		$(this).next("dd").slideDown();
	});
	//$(".area-time .list-munu .cur").click();
	$(".area-time .list-munu .time span").click(function(){
		$(this).siblings().removeClass("now");
		$(this).addClass("now");
	});

   function Boxes(sJQcontainer)
   {
    $(sJQcontainer).delegate("label",'click',function(){
        var oJQcontainer=$(this).closest(sJQcontainer);
        if(!$(this).hasClass("checked"))
        {//没选中的就选中
            $(this).addClass("checked")
                .find("input").get(0).checked=true;
            if($(this).has(":radio").size())
            {
                $(this).siblings().removeClass("checked");
            }
        }
        else if($(this).has(":checkbox").size())
        {//选中的话，如果是复选框才需要取消
            $(this).removeClass("checked")
                .find(":checkbox").get(0).checked=false;
        }
        return false;
    })
    .find(":checked").parent().addClass("checked")
    .end().end()
    .find("input:not(:checked)").parent().removeClass("checked");
   }
