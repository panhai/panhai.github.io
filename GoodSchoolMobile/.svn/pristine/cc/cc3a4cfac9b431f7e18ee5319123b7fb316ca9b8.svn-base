<script>
var myDate=new Date(),
	oYear=myDate.getFullYear(),
	oMonth=myDate.getMonth(),
	oDay=myDate.getDate(),
    oArray=[],oLi, oNull=[];

//显示日期yyyy-MM-dd
if(oMonth<10) oMonth="0"+oMonth;
$(".Date .date").html(oYear+"年"+(oMonth+1)+"月"+oDay+"日");

myDate.setDate(1);
for(var i=0; i<myDate.getDay(); i++){
	oNull.push('<li class="li"><span class="dot"></span></li>');
}

myDate.setMonth(myDate.getMonth()+1);
var contDate = new Date(myDate-3600000*24);

for(var i=0; i<contDate.getDate(); i++){
	oLi='<li class="li"><span class="dot">' + (i+1) + '</span></li>';
	oArray.push(oLi);
}
//填充 没日期的空格
oArray.unshift(oNull.join(""));

//填充日期
$(".Date .d-content").html(oArray.join(""));

//点击签到 显示今天几号
$(".gr-singin .jg-btnbig").click(function(){
	$(".TK-notice").show();
	$(".background").show();
	$(this).css("background","#8c8c8c");
	$(this).text("已签到");
	$(".Date .d-content .li .dot").each(function(i) {
        if($(this).text()==new Date().getDate()){

			$(this).addClass("cur");
		}
    });
});


$(".TK-notice .btn").click(function(){
	if($(this).text()=="分享"){
		$(this).closest(".TK-notice").hide();
	}
})
</script>












