<div class="apply" style=" padding-bottom:40px;">
    <div class="header"><a href="javascript:history.go(-1);" class="return_ico"></a>修改个人资料 </div>
    <div id="alert" class="form-warning"></div>
    <form class="form-widget" name="myform">
      <div class="form-group" style="border-top:1px solid #E5E5E5;">
        <label class="form-label w80">真实姓名</label>
        <div class="form-control">
          <label class="input-group">
            <input id="name" type="text" class="input-text" value="林小明"></label>
          </label>
        </div>
      </div>
      <div class="form-group">
        <label class="form-label w80">性别</label>
        <div class="form-control">
            <div class="radiobox">
              <input type="radio" class="radio_css" style="margin-left:0;" value="1" name="sex" ><label>男</label>
              <input type="radio" class="radio_css" value="2" name="sex" ><label>女</label>
            </div>
        </div>
      </div>
      
      <div class="form-group">
        <label  class="form-label w80">QQ</label>
        <div class="form-control">
          <label class="input-group">
            <input id="qq" type="text" class="input-text" value="22255455" ></label>
          </label>
        </div>
      </div>
      
      <input  id="btn" class="f_btn" type="submit" value="保存" >
      
      
    </form>
</div>
<script>
$(function(){
	$("#btn").click(function(){
		if($("#name").val().length<2) {alert(); return false;}
		else{$("#name").val();}
	})
})
</script>


