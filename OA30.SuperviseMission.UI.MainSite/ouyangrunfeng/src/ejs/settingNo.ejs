<%- include header %>
	<div class="main">
		<%- include breadcrumb %>
			<%- include search2 %>
			<div class="alert alert-danger">1234124123</div>
			<div class="tar">
				<a data-row="table" href="javascript:void(0)"><span class="iconfont icon-sv-add"></span>&nbsp;新增</a>
			</div>

			<div class="table-page">
				<% task = {
					title:['操作','是否可用','部门号','部门名称','文件字','年号','当前流水号','文件类型'],
					list:[
						['删除','否','190812','审计部','集团督查','2011','','01232'],
						['删除','否','190812','审计部','集团督查','2011','','01232'],
						['删除','否','190812','审计部','集团督查','2011','','01232'],
						['删除','否','190812','审计部','集团督查','2011','','01232'],
						['删除','否','190812','审计部','集团督查','2011','','01232'],
						['删除','否','190812','审计部','集团督查','2011','','01232']
					]
				} %>
				<table class="table table-bordered">
					<thead>
						<% task.title.forEach(function(item){ %>
							<th><%=item%></th>
						<% })%>
					</thead>
					<tbody>
						<% task.list.forEach(function(data) { %>
							<tr>
								<% data.forEach(function(list,index) { %>
									<% if(index === 0){ %>
										<td>
											<div class="btn-group btn-group-sm" role="group">
												<button type="button" class="btn btn-default edit" data-row="edit">编辑</button>
												<button type="button" class="btn delete btn-default cancel" data-row="delete">删除</button>
											</div>
										</td>
									<% }else{ %>
										<td style="width:<%=100/data.length%>%">
											<span>
												<% if(index === 3){ %>
													<select data-type="edit" class="form-control disabled" disabled>
														<option value="1">是</option>
														<option value="0">否</option>
													</select>	
												<% }else{  %>
													<input disabled data-type="edit" class="disabled form-control" value="<%=list%>"
												<% } %> 
											</span>
										</td>
									<% } %>
								<% })%>
							</tr>
						<% })%>
					</tbody>
				</table>
				<div class="tar">
					<%- include page %>
				</div>
		</div>
	</div>
<%- include footer %>

